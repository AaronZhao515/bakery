<!-- Custom Tab Bar - Figma Design -->
<view class="tab-bar">
  <view
    class="tab-bar-item {{selected === index ? 'tab-active' : ''}}"
    wx:for="{{list}}"
    wx:key="index"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="tab-icon-wrap">
      <image class="tab-icon-img" src="{{item.iconUrl}}" mode="aspectFit"/>
    </view>
    <text class="tab-text">{{item.text}}</text>
  </view>
</view>
