/**
 * 商品卡片组件样式
 */

/* 基础卡片样式 */
.product-card {
  position: relative;
  background: #fff;
  border-radius: var(--radius-lg, 16rpx);
  overflow: hidden;
  box-shadow: var(--shadow-sm, 0 2rpx 8rpx rgba(93, 64, 55, 0.06));
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md, 0 4rpx 16rpx rgba(93, 64, 55, 0.1));
}

/* 售罄状态 */
.product-card-soldout {
  opacity: 0.7;
}

.product-card-soldout .product-image {
  filter: grayscale(0.5);
}

/* ========== 垂直布局 ========== */
.product-card-vertical {
  width: 100%;
}

.product-card-vertical .product-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 1:1 比例 */
  overflow: hidden;
}

.product-card-vertical .product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.product-card-vertical .product-content {
  padding: 20rpx;
}

.product-card-vertical .product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary, #5D4037);
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.product-card-vertical .product-desc {
  font-size: 24rpx;
  color: var(--text-secondary, #8D6E63);
  margin-bottom: 12rpx;
}

.product-card-vertical .product-spec {
  font-size: 22rpx;
  color: var(--text-tertiary, #A1887F);
  margin-bottom: 12rpx;
}

.product-card-vertical .product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ========== 水平布局 ========== */
.product-card-horizontal {
  display: flex;
  padding: 20rpx;
}

.product-card-horizontal .product-image-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  border-radius: var(--radius-md, 12rpx);
  overflow: hidden;
}

.product-card-horizontal .product-image {
  width: 100%;
  height: 100%;
}

.product-card-horizontal .product-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-card-horizontal .product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary, #5D4037);
  line-height: 1.4;
}

.product-card-horizontal .product-desc {
  font-size: 24rpx;
  color: var(--text-secondary, #8D6E63);
  margin-top: 8rpx;
}

.product-card-horizontal .product-spec {
  font-size: 22rpx;
  color: var(--text-tertiary, #A1887F);
  margin-top: 8rpx;
}

.product-card-horizontal .product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: 16rpx;
}

/* ========== 列表布局 ========== */
.product-card-list {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
}

.product-card-list .product-image-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  border-radius: var(--radius-md, 12rpx);
  overflow: hidden;
}

.product-card-list .product-image {
  width: 100%;
  height: 100%;
}

.product-card-list .product-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-card-list .product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary, #5D4037);
}

.product-card-list .product-desc {
  font-size: 22rpx;
  color: var(--text-secondary, #8D6E63);
  margin-top: 4rpx;
}

.product-card-list .product-footer {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

/* ========== 图片区域 ========== */
.image-skeleton {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 标签 */
.product-tags {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm, 8rpx);
  font-size: 20rpx;
  font-weight: 500;
}

.tag-hot {
  background: linear-gradient(135deg, #FF7043, #FF5722);
  color: #fff;
}

.tag-new {
  background: linear-gradient(135deg, #66BB6A, #4CAF50);
  color: #fff;
}

.tag-recommend {
  background: linear-gradient(135deg, #AB47BC, #9C27B0);
  color: #fff;
}

.tag-discount {
  background: linear-gradient(135deg, #FFA726, #FF9800);
  color: #fff;
}

.tag-default {
  background: var(--primary-light, #E8D4C0);
  color: var(--primary-dark, #B8935F);
}

/* 售罄遮罩 */
.soldout-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.soldout-text {
  padding: 12rpx 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: var(--radius-full, 9999rpx);
}

/* 新品标签 */
.new-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #66BB6A, #4CAF50);
  color: #fff;
  font-size: 18rpx;
  font-weight: bold;
  border-bottom-left-radius: var(--radius-md, 12rpx);
}

/* ========== 价格区域 ========== */
.price-section {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price-current {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--accent, #FF7043);
}

.price-current::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.price-original {
  font-size: 24rpx;
  color: var(--text-tertiary, #A1887F);
  text-decoration: line-through;
}

.price-discount {
  padding: 2rpx 10rpx;
  background: var(--accent-light, #FFAB91);
  color: var(--accent, #FF7043);
  font-size: 20rpx;
  font-weight: 500;
  border-radius: var(--radius-sm, 8rpx);
}

/* 销量 */
.product-sold {
  font-size: 22rpx;
  color: var(--text-tertiary, #A1887F);
}

/* ========== 购物车按钮 ========== */
.cart-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, var(--primary, #D4A574), var(--primary-dark, #B8935F));
  border-radius: var(--radius-full, 9999rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(212, 165, 116, 0.4);
  transition: all 0.2s ease;
}

.cart-btn:active {
  transform: scale(0.9);
}

.cart-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.cart-btn-disabled {
  background: #ccc;
  box-shadow: none;
  pointer-events: none;
}

/* 水平布局的购物车按钮位置调整 */
.product-card-horizontal .cart-btn {
  position: static;
  margin-left: auto;
}

/* ========== 选中框 ========== */
.product-card-selectable {
  padding-left: 80rpx;
}

.select-box {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.select-checkbox {
  transform: scale(0.8);
}

/* ========== 响应式适配 ========== */
@media screen and (max-width: 375px) {
  .product-card-vertical .product-name {
    font-size: 26rpx;
  }
  
  .price-current {
    font-size: 28rpx;
  }
}

/* ========== 动画效果 ========== */
@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.product-card-animate {
  animation: cardFadeIn 0.4s ease-out;
}

/* 购物车按钮动画 */
@keyframes cartBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

.cart-btn-animating {
  animation: cartBounce 0.3s ease;
}
