/**
 * 加载动画组件样式
 */

/* 加载容器 */
.loading-wrapper {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 全屏模式 */
.loading-fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 遮罩层 */
.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(2px);
}

/* 加载内容 */
.loading-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

/* ========== 尺寸定义 ========== */
.loading-small .spinner-ring,
.loading-small .circle-svg {
  width: 32rpx;
  height: 32rpx;
}

.loading-medium .spinner-ring,
.loading-medium .circle-svg {
  width: 48rpx;
  height: 48rpx;
}

.loading-large .spinner-ring,
.loading-large .circle-svg {
  width: 64rpx;
  height: 64rpx;
}

/* ========== 旋转加载器 ========== */
.loading-spinner {
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner-ring {
  border: 4rpx solid;
  border-top-color: transparent !important;
  border-radius: 50%;
  animation: spinner-rotate 1s linear infinite;
}

@keyframes spinner-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* ========== 圆形进度 ========== */
.loading-circle {
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle-svg {
  position: relative;
  border: 4rpx solid transparent;
  border-radius: 50%;
}

.circle-progress {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 4rpx solid;
  border-color: transparent;
  border-top-color: inherit;
  border-radius: 50%;
  animation: circle-rotate 1s ease-in-out infinite;
}

@keyframes circle-rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ========== 跳动圆点 ========== */
.loading-dots {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.loading-small .dot {
  width: 12rpx;
  height: 12rpx;
}

.loading-medium .dot {
  width: 16rpx;
  height: 16rpx;
}

.loading-large .dot {
  width: 20rpx;
  height: 20rpx;
}

.dot {
  border-radius: 50%;
  animation: dots-bounce 1.4s ease-in-out infinite both;
}

.dot-1 {
  animation-delay: -0.32s;
}

.dot-2 {
  animation-delay: -0.16s;
}

@keyframes dots-bounce {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ========== 脉冲动画 ========== */
.loading-pulse {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-small .pulse-ring,
.loading-small .pulse-core {
  width: 32rpx;
  height: 32rpx;
}

.loading-medium .pulse-ring,
.loading-medium .pulse-core {
  width: 48rpx;
  height: 48rpx;
}

.loading-large .pulse-ring,
.loading-large .pulse-core {
  width: 64rpx;
  height: 64rpx;
}

.pulse-ring {
  position: absolute;
  border: 4rpx solid;
  border-radius: 50%;
  animation: pulse-ring 1.5s ease-out infinite;
}

.pulse-core {
  border-radius: 50%;
  animation: pulse-core 1.5s ease-in-out infinite;
}

@keyframes pulse-ring {
  0% {
    transform: scale(0.5);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

@keyframes pulse-core {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ========== 面包主题动画 ========== */
.loading-bread {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-small .bread-icon {
  font-size: 48rpx;
}

.loading-medium .bread-icon {
  font-size: 64rpx;
}

.loading-large .bread-icon {
  font-size: 80rpx;
}

.bread-icon {
  animation: bread-bounce 1s ease-in-out infinite;
}

.steam {
  position: absolute;
  width: 8rpx;
  height: 20rpx;
  background: linear-gradient(to top, rgba(212, 165, 116, 0.4), transparent);
  border-radius: 4rpx;
  opacity: 0;
}

.steam-1 {
  left: 30%;
  top: -10%;
  animation: steam-rise 2s ease-out infinite;
}

.steam-2 {
  left: 50%;
  top: -15%;
  animation: steam-rise 2s ease-out 0.5s infinite;
}

.steam-3 {
  left: 70%;
  top: -10%;
  animation: steam-rise 2s ease-out 1s infinite;
}

@keyframes bread-bounce {
  0%, 100% {
    transform: translateY(0) rotate(-5deg);
  }
  50% {
    transform: translateY(-10rpx) rotate(5deg);
  }
}

@keyframes steam-rise {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.6;
  }
  100% {
    transform: translateY(-40rpx) scale(0.5);
    opacity: 0;
  }
}

/* ========== 波浪动画 ========== */
.loading-wave {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.loading-small .wave-bar {
  width: 6rpx;
  height: 24rpx;
}

.loading-medium .wave-bar {
  width: 8rpx;
  height: 32rpx;
}

.loading-large .wave-bar {
  width: 10rpx;
  height: 40rpx;
}

.wave-bar {
  border-radius: 4rpx;
  animation: wave 1s ease-in-out infinite;
}

.wave-bar:nth-child(1) { animation-delay: 0s; }
.wave-bar:nth-child(2) { animation-delay: 0.1s; }
.wave-bar:nth-child(3) { animation-delay: 0.2s; }
.wave-bar:nth-child(4) { animation-delay: 0.3s; }
.wave-bar:nth-child(5) { animation-delay: 0.4s; }

@keyframes wave {
  0%, 100% {
    transform: scaleY(0.5);
  }
  50% {
    transform: scaleY(1);
  }
}

/* ========== 提示文字 ========== */
.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  text-align: center;
}

/* ========== 全屏模式特殊样式 ========== */
.loading-fullscreen .loading-content {
  padding: 60rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-fullscreen .loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: var(--text-secondary, #8D6E63);
}

/* ========== 页面加载样式 ========== */
.loading-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-primary, #FDF8F3);
  z-index: 9999;
}

/* ========== 骨架屏样式 ========== */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ========== 深色模式适配 ========== */
@media (prefers-color-scheme: dark) {
  .loading-mask {
    background: rgba(0, 0, 0, 0.6);
  }
  
  .loading-fullscreen .loading-content {
    background: #2a2a2a;
  }
  
  .loading-fullscreen .loading-text {
    color: #aaa;
  }
}
