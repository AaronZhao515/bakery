<view 
  wx:if="{{visible}}"
  class="loading-wrapper {{fullScreen ? 'loading-fullscreen' : ''}}"
  style="{{customStyle}}"
>
  <!-- ÈÅÆÁΩ©Â±Ç -->
  <view wx:if="{{mask}}" class="loading-mask"></view>

  <!-- Âä†ËΩΩÂÜÖÂÆπ -->
  <view class="loading-content">
    <!-- ÊóãËΩ¨Âä†ËΩΩÂô® -->
    <view wx:if="{{type === 'spinner'}}" class="loading-spinner loading-{{size}}">
      <view 
        class="spinner-ring"
        style="border-color: {{color}}; border-top-color: transparent;"
      ></view>
    </view>

    <!-- ÂúÜÂΩ¢ËøõÂ∫¶ -->
    <view wx:elif="{{type === 'circle'}}" class="loading-circle loading-{{size}}">
      <view class="circle-svg" style="border-color: {{color}};">
        <view class="circle-progress" style="border-color: {{color}};"></view>
      </view>
    </view>

    <!-- Ë∑≥Âä®ÂúÜÁÇπ -->
    <view wx:elif="{{type === 'dots'}}" class="loading-dots loading-{{size}}">
      <view class="dot dot-1" style="background: {{color}};"></view>
      <view class="dot dot-2" style="background: {{color}};"></view>
      <view class="dot dot-3" style="background: {{color}};"></view>
    </view>

    <!-- ËÑâÂÜ≤Âä®Áîª -->
    <view wx:elif="{{type === 'pulse'}}" class="loading-pulse loading-{{size}}">
      <view class="pulse-ring" style="border-color: {{color}};"></view>
      <view class="pulse-core" style="background: {{color}};"></view>
    </view>

    <!-- Èù¢ÂåÖ‰∏ªÈ¢òÂä®Áîª -->
    <view wx:elif="{{type === 'bread'}}" class="loading-bread loading-{{size}}">
      <view class="bread-icon" style="color: {{color}};">üçû</view>
      <view class="steam steam-1"></view>
      <view class="steam steam-2"></view>
      <view class="steam steam-3"></view>
    </view>

    <!-- Ê≥¢Êµ™Âä®Áîª -->
    <view wx:elif="{{type === 'wave'}}" class="loading-wave loading-{{size}}">
      <view class="wave-bar" style="background: {{color}};"></view>
      <view class="wave-bar" style="background: {{color}};"></view>
      <view class="wave-bar" style="background: {{color}};"></view>
      <view class="wave-bar" style="background: {{color}};"></view>
      <view class="wave-bar" style="background: {{color}};"></view>
    </view>

    <!-- ÊèêÁ§∫ÊñáÂ≠ó -->
    <view wx:if="{{text}}" class="loading-text" style="color: {{color}};">
      {{text}}
    </view>

    <!-- Ëá™ÂÆö‰πâÂÜÖÂÆπÊèíÊßΩ -->
    <slot></slot>
  </view>
</view>
