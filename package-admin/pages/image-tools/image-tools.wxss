/* 图片工具页样式 - 统一设计系统 */
.image-tools-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  padding-bottom: 40rpx;
}

/* 页面头部 - 与 Dashboard 统一 */
.page-header {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  padding: 60rpx 40rpx 80rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.25);
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 内容区域 - 负 margin 与 header 重叠 */
.content-section {
  margin: -50rpx 30rpx 30rpx;
}

/* 警告卡片 - 统一卡片风格 */
.warning-card {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border: 2rpx solid rgba(255, 152, 0, 0.3);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.warning-icon {
  width: 72rpx;
  height: 72rpx;
  background: rgba(230, 81, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.warning-content {
  flex: 1;
}

.warning-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #E65100;
  display: block;
  margin-bottom: 8rpx;
}

.warning-text {
  font-size: 24rpx;
  color: #E65100;
  line-height: 1.5;
  opacity: 0.8;
}

/* 通用卡片样式 - 与 Dashboard 统一 */
.card {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.08);
}

/* Section Title - 统一风格 */
.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 32rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #8B6347 0%, #D4A574 100%);
  border-radius: 4rpx;
}

/* 阈值选择卡片 */
.threshold-card .card-body {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.threshold-label {
  font-size: 28rpx;
  color: #5D4037;
  font-weight: 500;
  flex-shrink: 0;
}

.threshold-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border: 2rpx solid rgba(212, 165, 116, 0.2);
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
}

.threshold-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #8B6347;
}

.threshold-arrow {
  font-size: 24rpx;
  color: #9E8B7D;
}

.threshold-hint {
  font-size: 22rpx;
  color: #A1887F;
  margin-top: 16rpx;
  display: block;
}

/* 信息卡片 */
.info-card {
  text-align: center;
}

.info-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
}

.info-title {
  font-size: 28rpx;
  color: #9E8B7D;
}

.refresh-btn {
  position: absolute;
  right: 0;
  font-size: 24rpx;
  color: #8B6347;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
}

.info-count {
  font-size: 72rpx;
  font-weight: 800;
  color: #8B6347;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1;
}

.info-unit {
  font-size: 28rpx;
  font-weight: 500;
  color: #9E8B7D;
}

.info-desc {
  font-size: 24rpx;
  color: #A1887F;
  line-height: 1.5;
  margin-top: 16rpx;
}

/* 统计网格 - 与 Dashboard stat-card 风格统一 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #F0E6DC;
}

.stat-item {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.stat-item.highlight {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border: none;
}

.stat-icon {
  width: 56rpx;
  height: 56rpx;
  background: rgba(139, 99, 71, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12rpx;
  font-size: 28rpx;
}

.stat-item.highlight .stat-icon {
  background: rgba(255, 255, 255, 0.2);
}

.stat-num {
  font-size: 36rpx;
  font-weight: 800;
  color: #5D4037;
  display: block;
  margin-bottom: 8rpx;
}

.stat-item.highlight .stat-num {
  color: #fff;
}

.stat-label {
  font-size: 22rpx;
  color: #9E8B7D;
  display: block;
}

.stat-item.highlight .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

/* 进度区域 */
.progress-section {
  text-align: center;
}

.progress-bar {
  height: 12rpx;
  background: #F0E6DC;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8B6347 0%, #D4A574 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #5D4037;
  font-weight: 500;
}

/* 操作区域 */
.action-section {
  margin-top: 32rpx;
}

.compress-btn {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.3);
  position: relative;
  overflow: hidden;
}

.compress-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
}

.compress-btn.disabled {
  background: linear-gradient(135deg, #BDBDBD 0%, #9E9E9E 100%);
  box-shadow: none;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}

/* 汇总区域 */
.summary-card {
  text-align: center;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 32rpx;
  display: block;
}

.summary-row {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin-bottom: 32rpx;
}

.summary-item {
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #9E8B7D;
  display: block;
  margin-bottom: 12rpx;
}

.summary-value {
  font-size: 48rpx;
  font-weight: 800;
}

.summary-value.success {
  color: #4CAF50;
}

.summary-value.skip {
  color: #FF9800;
}

.summary-value.error {
  color: #F44336;
}

.saved-info {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  text-align: center;
  border: 2rpx solid rgba(76, 175, 80, 0.2);
}

.saved-label {
  font-size: 24rpx;
  color: #2E7D32;
  display: block;
  margin-bottom: 8rpx;
}

.saved-value {
  font-size: 40rpx;
  font-weight: 800;
  color: #2E7D32;
}

/* 结果列表 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  border-left: 6rpx solid #ddd;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.result-item.success {
  border-left-color: #4CAF50;
  background: linear-gradient(135deg, #E8F5E9 0%, #F5EDE0 100%);
}

.result-item.skipped {
  border-left-color: #FF9800;
  background: linear-gradient(135deg, #FFF3E0 0%, #F5EDE0 100%);
}

.result-item.failed {
  border-left-color: #F44336;
  background: linear-gradient(135deg, #FFEBEE 0%, #F5EDE0 100%);
}

.result-status-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.result-item.success .result-status-icon {
  background: #4CAF50;
  color: #fff;
}

.result-item.skipped .result-status-icon {
  background: #FF9800;
  color: #fff;
}

.result-item.failed .result-status-icon {
  background: #F44336;
  color: #fff;
}

.result-content {
  flex: 1;
  min-width: 0;
}

.result-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4037;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.result-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.detail-item {
  font-size: 22rpx;
  color: #9E8B7D;
  background: rgba(255, 255, 255, 0.6);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.detail-item.highlight {
  color: #4CAF50;
  font-weight: 600;
  background: rgba(76, 175, 80, 0.1);
}

.detail-item.skip-reason {
  color: #FF9800;
  background: rgba(255, 152, 0, 0.1);
}

.result-error {
  font-size: 22rpx;
  color: #F44336;
  background: rgba(244, 67, 54, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

/* 提示区域 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  background: rgba(139, 99, 71, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #8B6347;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #5D4037;
  line-height: 1.4;
  flex: 1;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 48rpx 0;
}

.loading-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  background: #D4A574;
  border-radius: 50%;
  animation: loading-bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #5D4037;
  font-weight: 500;
}

.loading-subtext {
  font-size: 24rpx;
  color: #9E8B7D;
  margin-top: 12rpx;
}

/* 空状态 */
.empty-card {
  text-align: center;
  padding: 64rpx 32rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin: 0 auto 32rpx;
  border: 4rpx solid rgba(212, 165, 116, 0.2);
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4037;
  display: block;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9E8B7D;
  display: block;
  margin-bottom: 32rpx;
}

.refresh-btn-primary {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx 64rpx;
  border-radius: 48rpx;
  display: inline-block;
  box-shadow: 0 8rpx 24rpx rgba(139, 99, 71, 0.25);
}
