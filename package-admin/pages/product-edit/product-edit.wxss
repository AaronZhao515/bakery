/* 商品编辑页样式 */
.product-edit-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.required {
  color: #f44336;
}

/* 图片上传 */
.image-upload-section {
  margin-top: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn .iconfont {
  font-size: 24rpx;
  color: #fff;
}

.main-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(212, 165, 116, 0.9);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  padding: 8rpx 0;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-btn .iconfont {
  font-size: 48rpx;
  color: #bbb;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.upload-tip {
  font-size: 22rpx;
  color: #bbb;
  margin-top: 8rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-item input,
.form-item textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-item input::placeholder,
.form-item textarea::placeholder {
  color: #bbb;
}

.form-item textarea {
  height: 160rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #bbb;
  margin-top: 12rpx;
}

/* 选择器 */
.picker-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-value.placeholder {
  color: #bbb;
}

.picker-value .iconfont {
  font-size: 28rpx;
  color: #bbb;
}

/* 价格输入 */
.price-input {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.currency {
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
}

.price-input input {
  flex: 1;
  padding: 0;
  background: transparent;
}

/* 开关项 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
}

/* 规格设置 */
.specs-section {
  margin-top: 20rpx;
}

.spec-item {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.spec-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.spec-name {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.delete-spec {
  font-size: 26rpx;
  color: #f44336;
}

.spec-values {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.spec-value-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.remove-value {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #999;
}

.add-value-input {
  width: 180rpx;
  padding: 12rpx 20rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.add-spec-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #d4a574;
}

.add-spec-btn .iconfont {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn.loading {
  opacity: 0.8;
}

.safe-area-bottom {
  height: 40rpx;
}
