/* 积分充值管理页样式 - Figma温暖色调统一风格 */

page {
  background: #FDF8F3;
  min-height: 100vh;
}

.points-manage-container {
  min-height: 100vh;
  background: #FDF8F3;
  padding-bottom: 40rpx;
}

/* 头部统计 - 温暖棕色渐变 */
.header-stats {
  display: flex;
  background: linear-gradient(135deg, #6B4423 0%, #3E2009 100%);
  padding: 40rpx 30rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(62, 32, 9, 0.2);
}

.stat-card {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-card:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background: rgba(212, 169, 106, 0.3);
}

.stat-card .stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #D4A96A;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.stat-card .stat-label {
  font-size: 24rpx;
  color: rgba(245, 237, 216, 0.8);
  letter-spacing: 1rpx;
}

/* 快捷充值区域 */
.quick-charge-section {
  background: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #3E2009;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #D4A96A 0%, #B08860 100%);
  border-radius: 3rpx;
}

.charge-form .form-item {
  margin-bottom: 32rpx;
}

.charge-form .label {
  display: block;
  font-size: 28rpx;
  color: #3E2009;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.search-box {
  display: flex;
  gap: 16rpx;
}

.search-box input {
  flex: 1;
  height: 88rpx;
  background: #F8F6F3;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
  color: #3E2009;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.search-box input:focus {
  border-color: #D4A96A;
  background: #FFFFFF;
}

.search-btn {
  width: 140rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(212, 169, 106, 0.4);
}

.search-btn::after {
  border: none;
}

.search-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(212, 169, 106, 0.3);
}

/* 搜索结果 */
.search-results {
  max-height: 400rpx;
  overflow-y: auto;
  background: #F8F6F3;
  border-radius: 16rpx;
  margin-top: 16rpx;
  border: 2rpx solid #F0EAD6;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #F0EAD6;
  transition: all 0.2s;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.selected {
  background: linear-gradient(135deg, #FFF8E1 0%, #F5EDD8 100%);
}

.result-item .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #E8D9C4;
}

.result-item .user-info {
  flex: 1;
}

.result-item .user-name {
  display: block;
  font-size: 30rpx;
  color: #3E2009;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.result-item .user-phone {
  font-size: 24rpx;
  color: #9B7355;
}

.result-item .user-points {
  text-align: right;
  background: linear-gradient(135deg, #FFF8E1 0%, #F5EDD8 100%);
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
}

.result-item .points-label {
  display: block;
  font-size: 20rpx;
  color: #9B7355;
  margin-bottom: 4rpx;
}

.result-item .points-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #D4A96A;
}

.no-results {
  text-align: center;
  padding: 60rpx;
  color: #9B7355;
  font-size: 28rpx;
}

/* 已选用户 */
.selected-user {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF8E1 0%, #F5EDD8 100%);
  border-radius: 16rpx;
  border: 2rpx solid #E8D9C4;
}

.user-tag {
  display: inline-flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 16rpx 28rpx;
  gap: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tag-avatar {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 2rpx solid #E8D9C4;
}

.user-tag text {
  font-size: 28rpx;
  color: #3E2009;
  font-weight: 600;
}

.user-tag .close-icon {
  font-size: 32rpx;
  color: #9B7355;
  margin-left: 8rpx;
  padding: 8rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F6F3;
  border-radius: 50%;
}

/* 积分输入 */
.points-input-group {
  display: flex;
  align-items: center;
  background: #F8F6F3;
  border-radius: 16rpx;
  padding: 0 28rpx;
  height: 96rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.points-input-group:focus-within {
  border-color: #D4A96A;
  background: #FFFFFF;
}

.points-input-group input {
  flex: 1;
  height: 100%;
  font-size: 36rpx;
  font-weight: 600;
  color: #3E2009;
}

.points-input-group .unit {
  font-size: 28rpx;
  color: #9B7355;
  font-weight: 500;
}

textarea {
  width: 100%;
  height: 160rpx;
  background: #F8F6F3;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #3E2009;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

textarea:focus {
  border-color: #D4A96A;
  background: #FFFFFF;
}

/* 快捷金额 */
.quick-amounts {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
  gap: 16rpx;
}

.quick-label {
  font-size: 26rpx;
  color: #9B7355;
  margin-right: 8rpx;
}

.amount-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.amount-tag {
  padding: 16rpx 36rpx;
  background: #F8F6F3;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #9B7355;
  font-weight: 500;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.amount-tag.active {
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(212, 169, 106, 0.4);
}

.amount-tag:active {
  transform: scale(0.96);
}

/* 充值按钮 */
.charge-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(212, 169, 106, 0.4);
  letter-spacing: 2rpx;
  transition: all 0.2s;
}

.charge-btn::after {
  border: none;
}

.charge-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(212, 169, 106, 0.3);
}

.charge-btn.loading {
  opacity: 0.8;
}

/* 标签切换 */
.tabs-section {
  display: flex;
  background: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #9B7355;
  border-radius: 12rpx;
  transition: all 0.3s;
  font-weight: 500;
}

.tab.active {
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 169, 106, 0.3);
}

/* 记录区域 */
.records-section {
  padding: 0 24rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #F0EAD6;
}

.date-picker .iconfont {
  font-size: 28rpx;
  color: #9B7355;
  margin-right: 12rpx;
}

.date-picker text:nth-child(2) {
  font-size: 28rpx;
  color: #3E2009;
  font-weight: 500;
}

.date-picker .icon-down {
  margin-left: 12rpx;
  margin-right: 0;
}

.clear-filter {
  font-size: 26rpx;
  color: #D4A96A;
  font-weight: 600;
  padding: 16rpx 24rpx;
}

/* 记录列表 */
.record-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #F8F6F3;
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.record-left .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #F0EAD6;
}

.record-info {
  flex: 1;
}

.record-info .user-name {
  display: block;
  font-size: 30rpx;
  color: #3E2009;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.record-info .record-time {
  display: block;
  font-size: 24rpx;
  color: #9B7355;
  margin-bottom: 8rpx;
}

.record-info .record-reason {
  font-size: 24rpx;
  color: #B08860;
  background: #F8F6F3;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.record-right {
  text-align: right;
}

.record-right .points-change {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #7A9B55;
  margin-bottom: 8rpx;
}

.record-right .operator {
  font-size: 22rpx;
  color: #9B7355;
  background: #F8F6F3;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 用户积分列表 */
.users-section {
  padding: 0 24rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 28rpx;
  height: 88rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #F0EAD6;
}

.search-input .iconfont {
  font-size: 32rpx;
  color: #9B7355;
  margin-right: 16rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #3E2009;
}

.sort-btn {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 28rpx;
  height: 88rpx;
  font-size: 28rpx;
  color: #9B7355;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #F0EAD6;
  font-weight: 500;
}

.sort-btn .iconfont {
  font-size: 24rpx;
  margin-left: 8rpx;
}

.user-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F8F6F3;
}

.user-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 52rpx;
  height: 52rpx;
  background: #F8F6F3;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #9B7355;
  margin-right: 20rpx;
  font-weight: 600;
}

.rank-num.top {
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  color: #FFFFFF;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(212, 169, 106, 0.4);
}

.user-item .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #F0EAD6;
}

.user-item .user-info {
  flex: 1;
}

.user-item .user-name {
  display: block;
  font-size: 30rpx;
  color: #3E2009;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-item .user-phone {
  font-size: 24rpx;
  color: #9B7355;
}

.points-info {
  text-align: center;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #FFF8E1 0%, #F5EDD8 100%);
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  min-width: 100rpx;
}

.points-info .points-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #D4A96A;
  margin-bottom: 4rpx;
}

.points-info .points-label {
  font-size: 20rpx;
  color: #9B7355;
}

.user-item .action-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(212, 169, 106, 0.4);
}

.action-btn .iconfont {
  font-size: 32rpx;
  color: #FFFFFF;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #9B7355;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #9B7355;
}

/* 浮动充值按钮 */
.fab-charge {
  position: fixed;
  bottom: 48rpx;
  right: 48rpx;
  width: 128rpx;
  height: 128rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(212, 169, 106, 0.5);
  z-index: 100;
  transition: all 0.2s;
}

.fab-charge:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(212, 169, 106, 0.4);
}

.fab-charge .iconfont {
  font-size: 40rpx;
  color: #FFFFFF;
  margin-bottom: 4rpx;
}

.fab-charge text:last-child {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
}
