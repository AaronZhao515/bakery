.coupon-manage-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  padding-bottom: 140rpx;
}

/* 顶部统计栏 - Figma温暖色调 */
.stats-bar {
  display: flex;
  background: linear-gradient(135deg, #6B4423 0%, #3E2009 100%);
  padding: 40rpx 30rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(62, 32, 9, 0.25);
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 2rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #D4A96A;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(245, 237, 216, 0.85);
}

/* 筛选区域 - 卡片风格 */
.filter-section {
  background: #fff;
  padding: 30rpx;
  margin: 0 30rpx 30rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
}

.search-box {
  display: flex;
  align-items: center;
  background: #FDF8F3;
  border-radius: 36rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
}

.search-box .iconfont {
  width: 32rpx;
  height: 32rpx;
  color: #6B4423;
  margin-right: 16rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-box .clear-icon {
  font-size: 36rpx;
  color: #999;
  padding: 0 10rpx;
}

.status-tabs {
  display: flex;
  gap: 16rpx;
}

.tab {
  flex: 1;
  padding: 16rpx 0;
  background: #FDF8F3;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.tab.active {
  background: linear-gradient(135deg, #6B4423 0%, #3E2009 100%);
  color: #fff;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(62, 32, 9, 0.3);
}

/* 优惠券列表 */
.coupon-list {
  padding: 0 24rpx;
}

.coupon-card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
}

.coupon-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 左侧彩色条 */
.coupon-color-bar {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: #D4A96A;
}

.coupon-card.active .coupon-color-bar {
  background: #4caf50;
}

.coupon-card.pending .coupon-color-bar {
  background: #ff9800;
}

.coupon-card.expired .coupon-color-bar {
  background: #999;
}

/* 过期状态降低透明度 */
.coupon-card.expired {
  opacity: 0.75;
}

/* 图标区 */
.coupon-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.coupon-icon-wrapper .iconfont {
  width: 48rpx;
  height: 48rpx;
}

/* 内容区 */
.coupon-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.status-tag.active {
  background: #E8F5E9;
  color: #4caf50;
}

.status-tag.pending {
  background: #FFF3E0;
  color: #ff9800;
}

.status-tag.expired {
  background: #F5F5F5;
  color: #999;
}

.coupon-discount {
  font-size: 36rpx;
  font-weight: 700;
}

.coupon-condition {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-status {
  font-size: 24rpx;
  color: #999;
}

/* 领取进度条 */
.coupon-progress {
  margin-top: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50 0%, #81c784 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
}

.progress-text.remaining {
  color: #e74c3c;
  font-weight: 500;
}

/* 不限量状态 */
.coupon-status.no-limit {
  font-size: 24rpx;
  color: #4caf50;
  margin-top: 8rpx;
}

/* 操作按钮区 */
.coupon-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 16rpx;
}

.action-btn-small {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.action-btn-small:active {
  transform: scale(0.9);
}

.action-btn-small .iconfont {
  width: 28rpx;
  height: 28rpx;
  display: inline-flex;
}

.action-btn-small.distribute {
  background: #E8F5E9;
}

.action-btn-small.distribute .iconfont {
  color: #4caf50;
}

.action-btn-small.edit {
  background: #E3F2FD;
}

.action-btn-small.edit .iconfont {
  color: #2196f3;
}

.action-btn-small.delete {
  background: #FFEBEE;
}

.action-btn-small.delete .iconfont {
  color: #e74c3c;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #999;
}

/* 底部添加按钮 */
.add-btn-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2000;
}

.add-btn {
  height: 88rpx;
  background: linear-gradient(135deg, #6B4423 0%, #3E2009 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(62, 32, 9, 0.4);
  transition: all 0.2s;
}

.add-btn:active,
.add-btn-hover {
  transform: scale(0.95);
  opacity: 0.8;
}

.add-btn .iconfont {
  width: 36rpx;
  height: 36rpx;
  color: #fff;
  margin-right: 12rpx;
}

.add-btn > text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
}

/* 弹窗样式 - 标准写法 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-box {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 64rpx;
