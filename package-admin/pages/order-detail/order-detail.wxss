/* 小赵面食 - Admin 订单详情页样式 */
.order-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  padding: 40rpx 40rpx 50rpx;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.back-btn .iconfont {
  font-size: 36rpx;
  color: #fff;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 4rpx;
}

.header-right {
  width: 64rpx;
}

/* 加载中 */
.loading-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #F5EDE0;
  border-top-color: #8B6347;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #A1887F;
  margin-top: 24rpx;
}

/* 页面内容 */
.page-content {
  flex: 1;
  padding: 30rpx;
  padding-bottom: 40rpx;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 28rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.1);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.status-header {
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-header.paid {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.status-header.preparing {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
}

.status-header.delivering {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
}

.status-header.completed {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
}

.status-header.cancelled,
.status-header.refunded {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.status-header.pending {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
}

.status-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-icon {
  font-size: 44rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 38rpx;
  font-weight: 700;
  color: #5D4037;
  display: block;
}

.status-desc {
  font-size: 26rpx;
  color: #8D6E63;
  margin-top: 8rpx;
  display: block;
}

/* 状态流程 */
.status-flow {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 50rpx;
}

.flow-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.flow-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #F5EDE0;
  position: relative;
}

.flow-item.active .flow-dot {
  background: #8B6347;
}

.flow-item.active .flow-dot::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 50%;
}

.flow-text {
  font-size: 24rpx;
  color: #A1887F;
}

.flow-item.active .flow-text {
  color: #8B6347;
  font-weight: 600;
}

.flow-line {
  flex: 1;
  height: 2rpx;
  background: #F5EDE0;
  margin: 0 12rpx;
  margin-bottom: 40rpx;
}

.flow-line.active {
  background: #8B6347;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 28rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F5EDE0;
  position: relative;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #8B6347 0%, #D4A574 100%);
  border-radius: 2rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #FAF7F4;
  border: 4rpx solid #F5EDE0;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  color: #5D4037;
  font-weight: 600;
  display: block;
}

.user-phone {
  font-size: 26rpx;
  color: #A1887F;
  margin-top: 8rpx;
  display: block;
}

.contact-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 28rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45A049 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.25);
}

.contact-btn .iconfont {
  font-size: 36rpx;
  color: #fff;
}

.contact-btn text {
  font-size: 22rpx;
  color: #fff;
}

/* 配送/订单信息 */
.delivery-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.info-label {
  font-size: 28rpx;
  color: #A1887F;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #5D4037;
  text-align: right;
  flex: 1;
  margin-left: 24rpx;
  font-weight: 500;
}

.info-value-wrap {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #D4A574;
  padding: 6rpx 20rpx;
  background: #FAF7F4;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 商品卡片 */
.products-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F5EDE0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #FAF7F4;
  flex-shrink: 0;
  border: 2rpx solid #F5EDE0;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: 600;
  display: block;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #A1887F;
  margin-top: 8rpx;
  display: block;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.product-price {
  font-size: 28rpx;
  color: #8B6347;
  font-weight: 600;
}

.product-qty {
  font-size: 24rpx;
  color: #A1887F;
}

.product-total {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: 700;
}

.subtotal-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 2rpx solid #F5EDE0;
  margin-top: 24rpx;
}

.subtotal-label {
  font-size: 26rpx;
  color: #A1887F;
}

.subtotal-price {
  font-size: 32rpx;
  color: #5D4037;
  font-weight: 700;
}

/* 价格卡片 */
.price-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-row.total {
  padding-top: 24rpx;
  border-top: 2rpx solid #F5EDE0;
  margin-top: 24rpx;
}

.price-label {
  font-size: 30rpx;
  color: #8D6E63;
}

.price-value {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: 500;
}

.price-value.discount {
  color: #E74C3C;
}

.price-value.total {
  font-size: 40rpx;
  color: #8B6347;
  font-weight: 700;
}

/* 处理记录 */
.remark-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.remark-item {
  padding: 24rpx;
  background: #FAF7F4;
  border-radius: 16rpx;
  border: 2rpx solid #F5EDE0;
}

.remark-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.remark-action {
  font-size: 28rpx;
  color: #5D4037;
  font-weight: 600;
}

.remark-time {
  font-size: 24rpx;
  color: #A1887F;
}

.remark-content {
  font-size: 26rpx;
  color: #8D6E63;
  display: block;
}

/* 底部间距 - 在page-content内部 */
.bottom-spacer {
  height: 40rpx;
}

/* 底部操作栏 */
.action-bar {
  background: #fff;
  padding: 24rpx 40rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 32rpx rgba(139, 99, 71, 0.12);
  border-radius: 32rpx 32rpx 0 0;
  flex-shrink: 0;
}

.action-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 24rpx;
}

.action-btn {
  min-width: 200rpx;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #FAF7F4;
  color: #8D6E63;
  border: 2rpx solid #E8E0D5;
}

.action-btn.primary {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(139, 99, 71, 0.3);
}

.action-btn.danger {
  background: #FFEBEE;
  color: #E74C3C;
  border: 2rpx solid #FFCDD2;
}

.action-btn:active {
  transform: scale(0.98);
}
