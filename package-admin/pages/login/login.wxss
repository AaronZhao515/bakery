/* 管理端登录页样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f0e8 0%, #e8dfd1 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 40rpx;
  background: #fff;
  box-shadow: 0 8rpx 32rpx rgba(139, 90, 43, 0.15);
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #5d4037;
  margin-bottom: 12rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: #8d6e63;
}

/* 登录表单 */
.login-form {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 90, 43, 0.1);
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5d4037;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-item {
  display: flex;
  align-items: center;
  background: #f9f6f2;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-item:focus-within {
  border-color: #d4a574;
  background: #fff;
}

.input-item .iconfont {
  font-size: 36rpx;
  color: #a1887f;
  margin-right: 20rpx;
}

.input-item input {
  flex: 1;
  font-size: 30rpx;
  color: #5d4037;
}

.input-item input::placeholder {
  color: #bcaaa4;
}

.remember-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 26rpx;
}

.forgot-link {
  color: #d4a574;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(212, 165, 116, 0.4);
}

.login-btn.loading {
  opacity: 0.8;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
}

/* 微信登录区域 */
.wx-login-section {
  width: 100%;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.divider .line {
  flex: 1;
  height: 2rpx;
  background: #d7ccc8;
}

.divider .text {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #a1887f;
}

.wx-login-btn {
  width: 100%;
  height: 96rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.wx-login-btn::after {
  border: none;
}

.wx-login-btn .iconfont {
  margin-right: 16rpx;
  font-size: 40rpx;
}

/* 已授权状态 */
.authorized-section {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 90, 43, 0.1);
  text-align: center;
}

.user-info {
  margin-bottom: 50rpx;
}

.user-info .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 6rpx solid #f5f0e8;
}

.user-info .nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #5d4037;
  margin-bottom: 16rpx;
}

.role-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 24rpx;
  border-radius: 24rpx;
}

.enter-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  margin-bottom: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(212, 165, 116, 0.4);
}

.enter-btn::after {
  border: none;
}

.switch-btn {
  width: 100%;
  height: 96rpx;
  background: transparent;
  color: #8d6e63;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: 2rpx solid #d7ccc8;
}

.switch-btn::after {
  border: none;
}

/* 底部版权 */
.footer {
  margin-top: auto;
  padding-top: 60rpx;
}

.footer text {
  font-size: 24rpx;
  color: #a1887f;
}
