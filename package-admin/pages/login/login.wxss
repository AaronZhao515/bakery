/* 小赵面食 - 管理端登录页样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 50rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-wrapper {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(139, 99, 71, 0.25);
  position: relative;
}

.logo-wrapper::before {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 36rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  filter: brightness(0) invert(1);
}

.app-name {
  font-size: 52rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 8rpx;
  letter-spacing: 8rpx;
}

.app-subtitle {
  font-size: 32rpx;
  font-weight: 500;
  color: #8B6347;
  margin-bottom: 20rpx;
  letter-spacing: 16rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: #A1887F;
  letter-spacing: 4rpx;
}

/* 登录区域 */
.login-section {
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
  text-align: center;
}

.login-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #A1887F;
  margin-bottom: 50rpx;
  display: block;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(139, 99, 71, 0.35);
  letter-spacing: 4rpx;
}

.login-btn.loading {
  opacity: 0.8;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(139, 99, 71, 0.25);
}

/* 已授权状态 */
.authorized-section {
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  padding: 70rpx 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
  text-align: center;
}

.user-info {
  margin-bottom: 60rpx;
}

.user-info .avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 8rpx solid #F5EDE0;
  box-shadow: 0 8rpx 24rpx rgba(139, 99, 71, 0.15);
}

.user-info .nickname {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 20rpx;
}

.role-tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
}

.enter-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(139, 99, 71, 0.35);
  letter-spacing: 4rpx;
}

.enter-btn::after {
  border: none;
}

.enter-btn:active {
  transform: scale(0.98);
}

.switch-btn {
  width: 100%;
  height: 100rpx;
  background: transparent;
  color: #8D6E63;
  font-size: 30rpx;
  border-radius: 50rpx;
  border: 2rpx solid #D7CCC8;
}

.switch-btn::after {
  border: none;
}

.switch-btn:active {
  background: #FAF7F4;
}

/* 底部版权 */
.footer {
  margin-top: auto;
  padding-top: 80rpx;
  text-align: center;
}

.footer text {
  font-size: 24rpx;
  color: #A1887F;
  letter-spacing: 2rpx;
}
