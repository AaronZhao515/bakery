<!-- 管理端登录页 -->
<view class="login-container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <view class="logo-wrapper">
      <image class="logo" src="cloud://cloud1-5gh4dyhpb180b5fb.636c-cloud1-5gh4dyhpb180b5fb-1406006729/images/logo.png" mode="aspectFit"></image>
    </view>
    <text class="app-name">小赵面食</text>
    <text class="app-subtitle">管理后台</text>
    <text class="app-slogan">用心制作每一份面食</text>
  </view>

  <!-- 未登录状态 -->
  <view class="login-section" wx:if="{{!isAuthorized}}">
    <view class="login-title">管理员登录</view>
    <text class="login-desc">点击按钮验证管理员身份</text>

    <button class="login-btn {{isLoading ? 'loading' : ''}}" bindtap="handleLogin">
      <text wx:if="{{!isLoading}}">登录</text>
      <text wx:else>登录中...</text>
    </button>
  </view>

  <!-- 已登录状态 -->
  <view class="authorized-section" wx:if="{{isAuthorized}}">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <text class="nickname">{{userInfo.nickName || '管理员'}}</text>
      <text class="role-tag" wx:if="{{userInfo.isAdmin}}">管理员</text>
    </view>

    <button class="enter-btn" bindtap="enterDashboard">进入管理后台</button>
    <button class="switch-btn" bindtap="switchAccount">退出登录</button>
  </view>

  <!-- 底部版权 -->
  <view class="footer">
    <text>© 2024 小赵面食 版权所有</text>
  </view>
</view>
