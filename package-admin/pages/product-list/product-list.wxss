/* 商品管理页样式 */
.product-list-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-section {
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 16rpx 30rpx;
}

.search-box .iconfont {
  font-size: 32rpx;
  color: #999;
  margin-right: 16rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-box input::placeholder {
  color: #bbb;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

/* 分类筛选 */
.filter-section {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 2rpx solid #f5f5f5;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
  margin-right: 16rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #d4a574;
  color: #fff;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.status-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}

.status-item.active {
  color: #d4a574;
  font-weight: 500;
}

.status-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #d4a574;
  border-radius: 2rpx;
}

/* 批量操作栏 */
.batch-section {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.batch-info {
  font-size: 26rpx;
  color: #666;
}

.batch-info .highlight {
  color: #d4a574;
  font-weight: 600;
}

.batch-actions {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.batch-btn {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #d4a574;
  background: rgba(212, 165, 116, 0.1);
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.batch-btn.danger {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

.cancel-btn {
  font-size: 26rpx;
  color: #999;
  padding: 12rpx 20rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx 30rpx;
}

.product-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.product-item.batch-mode {
  padding-left: 16rpx;
}

/* 选择框 */
.checkbox {
  margin-right: 16rpx;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon.checked {
  background: #d4a574;
  border-color: #d4a574;
}

.check-icon .iconfont {
  font-size: 24rpx;
  color: #fff;
}

/* 商品图片 */
.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}

/* 商品信息 */
.product-info {
  flex: 1;
  min-width: 0;
}

.product-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.product-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-tag {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.status-tag.on {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.status-tag.off {
  background: rgba(158, 158, 158, 0.1);
  color: #9e9e9e;
}

.product-category {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.current-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #d4a574;
  margin-right: 16rpx;
}

.original-price {
  font-size: 24rpx;
  color: #bbb;
  text-decoration: line-through;
}

.product-footer {
  display: flex;
}

.stock-info, .sales-info {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

/* 操作按钮 */
.product-actions {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-btn.edit {
  background: rgba(33, 150, 243, 0.1);
}

.action-btn.edit .iconfont {
  color: #2196f3;
  font-size: 28rpx;
}

.action-btn.toggle.on {
  background: rgba(76, 175, 80, 0.1);
}

.action-btn.toggle.on .iconfont {
  color: #4caf50;
}

.action-btn.toggle.off {
  background: rgba(158, 158, 158, 0.1);
}

.action-btn.toggle.off .iconfont {
  color: #9e9e9e;
}

.action-btn.delete {
  background: rgba(244, 67, 54, 0.1);
}

.action-btn.delete .iconfont {
  color: #f44336;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #bbb;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.batch-entry {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}

.batch-entry .iconfont {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.add-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-left: 30rpx;
}

.add-btn .iconfont {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 返回顶部 */
.back-to-top {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.back-to-top .iconfont {
  font-size: 36rpx;
  color: #666;
}
