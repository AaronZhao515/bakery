/* 暖心烘焙 - 商品管理页面样式 */
.product-list-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  display: flex;
  flex-direction: column;
}

/* 可滚动内容区 */
.scrollable-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #8B6347 0%, #A67B5B 50%, #D4A574 100%);
  padding: 40rpx 40rpx 60rpx;
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.3);
  position: relative;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 1;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

/* 搜索栏 */
.search-section {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
  position: relative;
  z-index: 10;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #D4A574;
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.1);
}

.search-box .iconfont {
  font-size: 32rpx;
  color: #9E8B7D;
  margin-right: 16rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #5C3D1E;
  background: transparent;
}

.search-box input::placeholder {
  color: #9E8B7D;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  background: rgba(158, 139, 125, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #9E8B7D;
  margin-left: 16rpx;
}

/* 添加按钮 */
.add-btn-header {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border-radius: 18rpx;
  padding: 20rpx 30rpx;
  margin-left: 20rpx;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
  transition: all 0.3s ease;
}

.add-btn-header:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.add-btn-header .iconfont {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.add-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 筛选区域 */
.filter-section {
  margin: 0 30rpx 20rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 4rpx;
}

.filter-item {
  display: inline-flex;
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #9E8B7D;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(139, 99, 71, 0.05);
  white-space: nowrap;
}

.filter-item.active {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
}

/* 状态筛选 */
.status-filter-section {
  margin: 0 30rpx 20rpx;
}

.status-scroll {
  white-space: nowrap;
}

.status-list {
  display: inline-flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 4rpx;
}

.status-item {
  display: inline-flex;
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #9E8B7D;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(139, 99, 71, 0.05);
  white-space: nowrap;
}

.status-item.active {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
}

/* 批量操作栏 */
.batch-section {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin: 0 30rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
}

.batch-info {
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 500;
}

.batch-info .highlight {
  color: #8B6347;
  font-weight: 700;
}

.batch-actions {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
  gap: 12rpx;
}

.batch-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #8B6347;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(139, 99, 71, 0.2);
  transition: all 0.3s ease;
}

.batch-btn.danger {
  color: #E57373;
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  border-color: rgba(229, 115, 115, 0.3);
}

.batch-btn:active {
  transform: scale(0.95);
}

.cancel-btn {
  font-size: 26rpx;
  color: #9E8B7D;
  padding: 12rpx 20rpx;
}

/* 商品列表 */
.product-list {
  padding: 0 30rpx;
}

.product-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 28rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(139, 99, 71, 0.06);
}

.product-item.batch-mode {
  padding-left: 16rpx;
}

/* 选择框 */
.checkbox {
  margin-right: 16rpx;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.3s ease;
}

.check-icon.checked {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border-color: transparent;
}

.check-icon .iconfont {
  font-size: 24rpx;
  color: #fff;
}

/* 商品图片 */
.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.product-image.off {
  opacity: 0.6;
  filter: grayscale(40%);
}

/* 商品信息 */
.product-info {
  flex: 1;
  min-width: 0;
}

.product-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.product-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #5C3D1E;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-name.off {
  color: #9E8B7D;
}

.status-tag {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
  font-weight: 500;
}

.status-tag.on {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #4CAF50;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.status-tag.off {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #9E9E9E;
  border: 2rpx solid rgba(158, 158, 158, 0.3);
}

.product-category {
  display: block;
  font-size: 24rpx;
  color: #9E8B7D;
  margin-bottom: 12rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.current-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #8B6347;
  margin-right: 16rpx;
}

.original-price {
  font-size: 24rpx;
  color: #B8A89A;
  text-decoration: line-through;
}

.product-footer {
  display: flex;
  gap: 24rpx;
}

.stock-info, .sales-info {
  font-size: 24rpx;
  color: #9E8B7D;
}

.stock-info.warning {
  color: #E57373;
  font-weight: 500;
}

/* 操作按钮 */
.product-actions {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.edit {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.action-btn.edit .iconfont {
  color: #2196f3;
  font-size: 28rpx;
}

.action-btn.toggle.on {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.action-btn.toggle.on .iconfont {
  color: #E57373;
  font-size: 28rpx;
}

.action-btn.toggle.off {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
}

.action-btn.toggle.off .iconfont {
  color: #4CAF50;
  font-size: 28rpx;
}

.action-btn.delete {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.action-btn.delete .iconfont {
  color: #E57373;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #5C3D1E;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #9E8B7D;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #9E8B7D;
}

/* 底部占位 - 在scroll-view内部 */
.bottom-spacer {
  height: 40rpx;
  flex-shrink: 0;
}

/* 底部操作栏 */
.bottom-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(139, 99, 71, 0.1);
  flex-shrink: 0;
}

.batch-entry {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #8B6347;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 36rpx;
  border: 2rpx solid rgba(139, 99, 71, 0.2);
}

.batch-entry .iconfont {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.add-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-left: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 99, 71, 0.3);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.add-btn .iconfont {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 返回顶部按钮 */
.back-to-top {
  position: fixed;
  right: 30rpx;
  bottom: 160rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.2);
  border: 2rpx solid rgba(212, 165, 116, 0.2);
}

.back-to-top .iconfont {
  font-size: 36rpx;
  color: #8B6347;
}
