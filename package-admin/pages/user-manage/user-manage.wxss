/* 暖心烘焙 - 用户管理页面样式 */
.user-manage-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #8B6347 0%, #A67B5B 50%, #D4A574 100%);
  padding: 40rpx 40rpx 60rpx;
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.3);
  position: relative;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 1;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

/* 搜索栏 */
.search-section {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  margin: 20rpx 30rpx 20rpx;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
  position: relative;
  z-index: 10;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box.focus {
  border-color: #D4A574;
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #9E8B7D;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #5C3D1E;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #9E8B7D;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  background: rgba(158, 139, 125, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #9E8B7D;
  margin-left: 16rpx;
}

/* 添加按钮 */
.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border-radius: 18rpx;
  padding: 20rpx 30rpx;
  margin-left: 20rpx;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.add-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 角色筛选 */
.role-filter-section {
  margin: 0 30rpx 20rpx;
}

.role-scroll {
  white-space: nowrap;
}

.role-list {
  display: inline-flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 4rpx;
}

.role-item {
  display: inline-flex;
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #9E8B7D;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(139, 99, 71, 0.05);
  white-space: nowrap;
}

.role-item.active {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
}

/* 用户列表 */
.user-list {
  padding: 0 30rpx;
}

.user-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.08);
  border: 2rpx solid rgba(212, 165, 116, 0.1);
  transition: all 0.3s ease;
}

.user-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(139, 99, 71, 0.06);
}

.user-main {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(212, 165, 116, 0.3);
  margin-right: 24rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #5C3D1E;
}

.role-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.role-tag.admin {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
}

.role-tag.user {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  color: #9E8B7D;
  border: 2rpx solid rgba(212, 165, 116, 0.3);
}

/* 状态标签 */
.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.active {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #4CAF50;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.status-tag.disabled {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #E57373;
  border: 2rpx solid rgba(229, 115, 115, 0.3);
}

/* 禁用用户样式 */
.user-avatar.disabled {
  opacity: 0.5;
  filter: grayscale(100%);
}

.user-name.disabled {
  color: #9E8B7D;
  text-decoration: line-through;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: #9E8B7D;
  margin-bottom: 8rpx;
}

.user-time {
  display: block;
  font-size: 22rpx;
  color: #B8A89A;
}

/* 用户统计行 */
.user-stats-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-stat {
  font-size: 24rpx;
  color: #8B6347;
  font-weight: 500;
}

.user-stat-dot {
  margin: 0 12rpx;
  color: #D4A574;
  font-weight: bold;
}

/* 用户数据 */
.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #8B6347;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #9E8B7D;
}

/* 操作按钮 */
.user-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  color: #8B6347;
  border: 2rpx solid rgba(139, 99, 71, 0.2);
}

.action-btn.danger {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #E57373;
  border: 2rpx solid rgba(229, 115, 115, 0.3);
}

.action-btn.warning {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #E57373;
  border: 2rpx solid rgba(229, 115, 115, 0.3);
}

.action-btn.success {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #4CAF50;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.action-btn.primary {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.25);
}

.action-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #5C3D1E;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #9E8B7D;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #9E8B7D;
}

/* 弹窗样式 */
.user-modal,
.permission-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.user-modal.show,
.permission-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.user-modal.show .modal-content,
.permission-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid rgba(212, 165, 116, 0.15);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5C3D1E;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #9E8B7D;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 30rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid rgba(212, 165, 116, 0.15);
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #5C3D1E;
  margin-bottom: 16rpx;
}

.form-label .required {
  color: #E57373;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #5C3D1E;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #D4A574;
  background: #fff;
}

.switch-label {
  flex: 1;
}

.switch-hint {
  display: block;
  font-size: 24rpx;
  color: #9E8B7D;
  margin-top: 8rpx;
}

.switch-info {
  flex: 1;
}

.admin-switch {
  transform: scale(0.9);
}

/* 头像上传 */
.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx dashed rgba(212, 165, 116, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  transition: all 0.3s ease;
}

.avatar-upload:active {
  border-color: #D4A574;
  background: #fff;
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 22rpx;
  color: #9E8B7D;
}

/* Picker 样式 */
.form-picker {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #5C3D1E;
}

.picker-arrow {
  font-size: 32rpx;
  color: #9E8B7D;
}

/* 删除弹窗 */
.delete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.delete-modal.show {
  visibility: visible;
  opacity: 1;
}

.delete-content {
  max-height: 50vh;
  padding: 50rpx 40rpx;
}

.delete-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.delete-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.delete-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5C3D1E;
}

.delete-body {
  text-align: center;
  margin-bottom: 40rpx;
}

.delete-text {
  display: block;
  font-size: 30rpx;
  color: #5C3D1E;
  margin-bottom: 16rpx;
}

.delete-hint {
  display: block;
  font-size: 26rpx;
  color: #E57373;
}

.delete-footer {
  display: flex;
  gap: 24rpx;
}

.footer-btn.danger {
  background: linear-gradient(135deg, #E57373 0%, #EF5350 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(229, 115, 115, 0.3);
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: none;
}

.footer-btn::after {
  border: none;
}

.footer-btn.secondary {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  color: #8B6347;
  border: 2rpx solid rgba(139, 99, 71, 0.2);
}

.footer-btn.primary {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(139, 99, 71, 0.3);
}

.footer-btn:active {
  transform: scale(0.96);
}

/* 用户详情卡片 */
.user-detail-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(212, 165, 116, 0.3);
  margin-right: 24rpx;
  background: #fff;
}

.detail-info {
  flex: 1;
}

.detail-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #5C3D1E;
  margin-bottom: 12rpx;
}

.detail-role-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 详情区块 */
.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #5C3D1E;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #D4A574;
}

.info-list {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(212, 165, 116, 0.1);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #9E8B7D;
}

.info-value {
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 500;
  max-width: 400rpx;
  text-align: right;
  word-break: break-all;
}

/* 统计数据网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stats-item {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  text-align: center;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #8B6347;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #9E8B7D;
}

/* 小订单列表 */
.order-list-small {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
  padding: 20rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.order-item-small {
  padding: 20rpx;
  border-bottom: 2rpx solid rgba(212, 165, 116, 0.1);
}

.order-item-small:last-child {
  border-bottom: none;
}

.order-small-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.order-small-no {
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 500;
}

.order-small-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(212, 165, 116, 0.2);
  color: #8B6347;
}

.order-small-time {
  display: block;
  font-size: 22rpx;
  color: #9E8B7D;
  margin-bottom: 8rpx;
}

.order-small-amount {
  display: block;
  font-size: 28rpx;
  color: #8B6347;
  font-weight: 600;
}

/* 权限编辑弹窗样式 */
.edit-user-brief {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid rgba(212, 165, 116, 0.15);
}

.edit-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(212, 165, 116, 0.3);
  margin-right: 24rpx;
  background: #fff;
}

.edit-info {
  flex: 1;
}

.edit-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #5C3D1E;
  margin-bottom: 8rpx;
}

.edit-phone {
  font-size: 24rpx;
  color: #9E8B7D;
}

.edit-section {
  margin-bottom: 30rpx;
}

.edit-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #5C3D1E;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #D4A574;
}

/* 角色选择 */
.role-select-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-select-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 20rpx;
