/* 小赵面食 - Admin 仪表板样式 */
.dashboard-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  padding-bottom: 40rpx;
}

/* 顶部欢迎栏 */
.header-section {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  padding: 60rpx 40rpx 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.25);
}

.user-welcome {
  display: flex;
  align-items: center;
}

.user-welcome .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 24rpx;
  background: #fff;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.welcome-text .greeting {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.welcome-text .date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.header-actions .action-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-actions .action-btn .iconfont {
  font-size: 36rpx;
  color: #fff;
}

/* 数据概览卡片 */
.stats-section {
  margin: -50rpx 30rpx 30rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background: linear-gradient(135deg, #FAF7F4 0%, #F5EDE0 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
  border: 2rpx solid rgba(212, 165, 116, 0.2);
}

.stat-card.primary {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  border: none;
}

.stat-card.primary .stat-value,
.stat-card.primary .stat-label {
  color: #fff;
}

.stat-card.secondary {
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  border: none;
}

.stat-card.secondary .stat-value,
.stat-card.secondary .stat-label {
  color: #fff;
}

.stat-card.warning {
  background: linear-gradient(135deg, #F5A623 0%, #E09513 100%);
  border: none;
}

.stat-card.warning .stat-value,
.stat-card.warning .stat-label {
  color: #fff;
}

.stat-card.danger {
  background: linear-gradient(135deg, #E74C3C 0%, #C0392B 100%);
  border: none;
}

.stat-card.danger .stat-value,
.stat-card.danger .stat-label {
  color: #fff;
}

.stat-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  min-width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #5D4037;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.stat-icon .iconfont {
  font-size: 36rpx;
  color: #fff;
}

.stat-content {
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #5D4037;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8D6E63;
  display: block;
  margin-bottom: 12rpx;
}

.stat-card.primary .stat-label,
.stat-card.secondary .stat-label,
.stat-card.warning .stat-label,
.stat-card.danger .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

.stat-trend {
  display: flex;
  align-items: center;
  font-size: 22rpx;
}

.stat-trend.up {
  color: #4CAF50;
}

.stat-trend.down {
  color: #F44336;
}

.stat-card.primary .stat-trend.up,
.stat-card.secondary .stat-trend.up,
.stat-card.warning .stat-trend.up,
.stat-card.danger .stat-trend.up {
  color: rgba(255, 255, 255, 0.9);
}

.stat-trend .iconfont {
  font-size: 20rpx;
  margin-right: 4rpx;
}

/* 周期统计 */
.period-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 40rpx;
  border-top: 2rpx solid #F0EBE5;
}

.period-item {
  text-align: center;
}

.period-label {
  font-size: 24rpx;
  color: #A1887F;
  display: block;
  margin-bottom: 12rpx;
}

.period-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #5D4037;
}

.period-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E8E0D5;
}

/* 功能导航菜单 */
.menu-section {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.1);
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 40rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #8B6347 0%, #D4A574 100%);
  border-radius: 4rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

/* 小屏幕适配 */
@media screen and (max-width: 375px) {
  .menu-grid {
    gap: 20rpx;
  }

  .menu-icon-wrap,
  .menu-icon {
    width: 90rpx;
    height: 90rpx;
  }

  .menu-icon-svg {
    width: 48rpx;
    height: 48rpx;
  }

  .menu-label {
    font-size: 24rpx;
  }

  .menu-desc {
    font-size: 20rpx;
  }
}

/* 超小屏幕适配 */
@media screen and (max-width: 320px) {
  .menu-section {
    padding: 30rpx 20rpx;
  }

  .menu-grid {
    gap: 16rpx;
  }

  .menu-icon-wrap,
  .menu-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 24rpx;
  }

  .menu-icon-svg {
    width: 44rpx;
    height: 44rpx;
  }
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* SVG 图标容器 */
