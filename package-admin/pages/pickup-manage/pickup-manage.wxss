/* 自取订单管理页面样式 */

/* 统计卡片区域 */
.stats-cards {
  display: flex;
  padding: 20rpx;
  gap: 16rpx;
  background: linear-gradient(135deg, #7A5533 0%, #B08860 100%);
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stat-card.primary {
  border-left: 4rpx solid #4CAF50;
}

.stat-card.warning {
  border-left: 4rpx solid #FF9800;
}

.stat-card.success {
  border-left: 4rpx solid #2196F3;
}

.stat-icon {
  font-size: 40rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.date-filter {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.date-picker {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 0 20rpx;
}

.date-picker.active {
  background: #E8F5E9;
  color: #4CAF50;
}

.date-separator {
  font-size: 26rpx;
  color: #999;
}

.filter-btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  background: #7A5533;
  color: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
}

.reset-btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 32rpx;
  font-size: 26rpx;
}

.status-filter {
  white-space: nowrap;
}

.status-list {
  display: inline-flex;
  gap: 16rpx;
}

.status-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  background: #f5f5f5;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.status-item.active {
  background: #7A5533;
  color: #fff;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-text {
  font-size: 26rpx;
  color: #666;
}

.stats-text text {
  color: #333;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.order-status.pending {
  background: #FFF3E0;
  color: #FF9800;
}

.order-status.paid {
  background: #E3F2FD;
  color: #2196F3;
}

.order-status.preparing {
  background: #FFF8E1;
  color: #FFC107;
}

.order-status.ready {
  background: #E8F5E9;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.order-status.completed {
  background: #E8F5E9;
  color: #4CAF50;
}

.order-status.cancelled {
  background: #FFEBEE;
  color: #F44336;
}

/* 取货码区域 */
.pickup-code-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #4CAF50;
}

.pickup-code-label {
  font-size: 28rpx;
  color: #2E7D32;
  font-weight: 500;
}

.pickup-code-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1B5E20;
  letter-spacing: 8rpx;
}

/* 商品信息 */
.product-section {
  margin-bottom: 20rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-item {
  display: flex;
  gap: 16rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #F44336;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

.more-products {
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  color: #999;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

/* 金额区域 */
.amount-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  color: #F44336;
  font-weight: bold;
}

/* 用户信息 */
.user-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f5f5f5;
}

.user-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.user-phone {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-section {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.action-btn {
  margin: 0;
  padding: 0 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: #7A5533;
  color: #fff;
}

.action-btn.success {
  background: #4CAF50;
  color: #fff;
}

.action-btn.delivery {
  background: #2196F3;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #bbb;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

/* 处理弹窗 */
.process-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 进度步骤 */
.process-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.step-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.step-item.completed .step-icon {
  background: #4CAF50;
}

.step-item.active .step-icon {
  background: #7A5533;
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(122, 85, 51, 0.3);
}

.step-text {
  font-size: 22rpx;
  color: #999;
}

.step-item.completed .step-text,
.step-item.active .step-text {
  color: #333;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background: #e0e0e0;
  margin: 0 10rpx;
  margin-bottom: 40rpx;
}

.step-line.completed {
  background: #4CAF50;
}

/* 取货码显示 */
.pickup-code-display {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  border: 2rpx dashed #4CAF50;
}

.code-label {
  display: block;
  font-size: 28rpx;
  color: #2E7D32;
  margin-bottom: 16rpx;
}

.code-value {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: #1B5E20;
  letter-spacing: 12rpx;
}

/* 操作区域 */
.process-actions {
  margin-bottom: 30rpx;
}

.action-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.process-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  transition: all 0.3s;
}

.process-action.enabled {
  background: #E8F5E9;
}

.process-action.enabled:active {
  background: #C8E6C9;
  transform: scale(0.98);
}

.process-action.disabled {
  opacity: 0.4;
}

.process-action.cancel {
  background: #FFEBEE;
}

.process-action.cancel.enabled:active {
  background: #FFCDD2;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.action-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 备注区域 */
.remark-section {
  margin-top: 20rpx;
}

.section-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.remark-input {
  width: 100%;
  height: 120rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.placeholder-style {
  color: #bbb;
}

/* 弹窗底部 */
.modal-footer {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
  justify-content: center;
}

.btn-secondary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.btn-secondary::after {
  border: none;
}
