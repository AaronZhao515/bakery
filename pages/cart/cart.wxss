/* 购物车页面样式 - 确定预定（匹配 Figma 设计稿） */

page {
  background-color: #F0EAD6;
  min-height: 100vh;
}

.cart-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.header-bar {
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  padding: 100rpx 30rpx 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 0;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
}

.back-text {
  font-size: 26rpx;
  color: rgba(245, 237, 216, 0.85);
}

.header-title {
  font-size: 34rpx;
  color: #F5EDD8;
  font-weight: 700;
  margin-left: 16rpx;
  letter-spacing: 2rpx;
}

.order-type-badge {
  margin-left: auto;
  padding: 6rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.order-type-badge.pickup {
  background: #D4A96A;
}

.order-type-badge.delivery {
  background: #9B7355;
}

/* ========== 空购物车状态 ========== */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 400rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #B08860;
  margin-top: 30rpx;
}

.go-shopping-btn {
  margin-top: 40rpx;
  padding: 20rpx 56rpx;
  background: #9B7355;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 999rpx;
}

/* ========== 购物车内容 ========== */
.cart-content {
  flex: 1;
  padding: 280rpx 24rpx 320rpx;
  box-sizing: border-box;
}

/* 已选商品标签 */
.section-header {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.section-icon-wrap {
  width: 48rpx;
  height: 48rpx;
  background: #F5EDD8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-icon {
  width: 28rpx;
  height: 28rpx;
}

.section-title {
  font-size: 30rpx;
  color: #5C3D1E;
  font-weight: 700;
  margin-left: 16rpx;
}

.total-qty-badge {
  margin-left: auto;
  background: #F5EDD8;
  color: #9B7355;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
}

/* ========== 商品列表 ========== */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
  position: relative;
}

.product-image-wrap {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #F5EDD8;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.product-name-wrap {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  line-height: 1.4;
  display: block;
}

.product-desc {
  font-size: 22rpx;
  color: #B08860;
  margin-top: 8rpx;
  display: block;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.product-price {
  font-size: 32rpx;
  color: #9B7355;
  font-weight: 700;
}

/* 数量调整器 */
.quantity-stepper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stepper-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.stepper-btn:active {
  transform: scale(0.95);
}

.stepper-btn.minus {
  background: #F5EDD8;
  border: 2rpx solid #C8A882;
}

.stepper-btn.minus.disabled {
  opacity: 0.5;
}

.stepper-btn.plus {
  background: #9B7355;
  border: none;
}

.minus-icon {
  font-size: 28rpx;
  color: #7A5533;
  font-weight: 700;
  line-height: 1;
}

.plus-icon {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1;
}

.quantity-value {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 700;
  min-width: 36rpx;
  text-align: center;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  padding: 8rpx 16rpx;
}

.delete-text {
  font-size: 24rpx;
  color: #B08860;
}

/* ========== 订单提示 ========== */
.order-note {
  background: #FFF8EE;
  border: 3rpx dashed #D4A96A;
  border-radius: 32rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-top: 24rpx;
}

.note-icon {
  font-size: 36rpx;
}

.note-content {
  flex: 1;
}

.note-title {
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 600;
  display: block;
}

.note-desc {
  font-size: 22rpx;
  color: #B08860;
  margin-top: 4rpx;
  display: block;
}

/* 底部间距 */
.bottom-spacer {
  height: 40rpx;
}

/* ========== 底部确定预定栏 ========== */
.confirm-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 30rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(155, 115, 85, 0.14);
  border-radius: 40rpx 40rpx 0 0;
  z-index: 100;
}

.confirm-content {
  display: flex;
  flex-direction: column;
}

.total-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #B08860;
}

.total-price {
  font-size: 44rpx;
  color: #7A5533;
  font-weight: 800;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  color: #F5EDD8;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  border-radius: 999rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(90, 50, 10, 0.25);
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  transform: scale(0.98);
  opacity: 0.95;
}
