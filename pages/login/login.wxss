/* 登录页面样式 - 匹配 Figma 设计稿 */

page {
  background-color: #F0EAD6;
  min-height: 100vh;
}

.login-page {
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* ========== 顶部装饰背景 ========== */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  border-radius: 0 0 60rpx 60rpx;
  z-index: 0;
}

.header-curve {
  position: absolute;
  bottom: -40rpx;
  left: 0;
  right: 0;
  height: 80rpx;
  background: #F0EAD6;
  border-radius: 50% 50% 0 0;
}

/* ========== Logo 区域 ========== */
.logo-area {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
  margin-bottom: 60rpx;
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 24rpx;
}

.logo-img {
  width: 100rpx;
  height: 100rpx;
}

.brand-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 12rpx;
}

.brand-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 4rpx;
}

/* ========== 登录卡片 ========== */
.login-card {
  position: relative;
  z-index: 1;
  background: #FFFFFF;
  border-radius: 40rpx;
  margin: 0 40rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(155, 115, 85, 0.12);
}

.card-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #5C3D1E;
  display: block;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: #B08860;
  display: block;
}

/* ========== 新版头像昵称填写区域 ========== */
.profile-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

/* 头像选择器 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #EAD9BB;
  background: #F5F5F5;
  box-shadow: 0 8rpx 32rpx rgba(155, 115, 85, 0.15);
  transition: all 0.3s ease;
}

.avatar-badge {
  position: relative;
  margin-top: -40rpx;
  margin-bottom: 8rpx;
  width: 56rpx;
  height: 56rpx;
  background: #9B7355;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(155, 115, 85, 0.3);
}

.avatar-badge-icon {
  font-size: 28rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #9B7355;
  font-weight: 500;
}

/* 昵称输入区域 */
.nickname-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #5C3D1E;
  padding-left: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background: #FAFAFA;
  border: 2rpx solid #EAD9BB;
  border-radius: 24rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #5C3D1E;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.nickname-input:focus {
  background: #FFFFFF;
  border-color: #9B7355;
  box-shadow: 0 4rpx 16rpx rgba(155, 115, 85, 0.1);
}

.input-hint {
  font-size: 22rpx;
  color: #B08860;
  padding-left: 16rpx;
}

/* 兼容旧版用户卡片（已登录状态） */
.user-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #FDF8F3 0%, #F5EDD8 100%);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #EAD9BB;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(155, 115, 85, 0.2);
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #5C3D1E;
  margin-bottom: 8rpx;
}

.user-tip {
  font-size: 22rpx;
  color: #B08860;
}

/* ========== 登录按钮 ========== */
.login-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn::after {
  border: none;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn:disabled {
  opacity: 0.6;
}

.btn-primary {
  background: linear-gradient(135deg, #07C160 0%, #059D4C 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.35);
}

.btn-secondary {
  background: #F5F5F5;
  color: #666;
}

.btn-phone {
  background: linear-gradient(135deg, #9B7355 0%, #7A5533 100%);
  color: #FFFFFF;
}

.btn-link {
  background: transparent;
  color: #999;
  font-size: 28rpx;
  border: none;
  box-shadow: none;
}

.btn-link::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* ========== 用户协议 ========== */
.agreement-box {
  display: flex;
  align-items: flex-start;
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #F5EDD8;
}

.checkbox-wrap {
  padding: 4rpx;
  margin-right: 12rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #C8A882;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #9B7355;
  border-color: #9B7355;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
}

.agreement-text {
  flex: 1;
  font-size: 24rpx;
  color: #7A5533;
  line-height: 1.6;
}

.link {
  color: #9B7355;
  font-weight: 600;
}

/* ========== 会员权益 ========== */
.benefits-area {
  margin-top: 48rpx;
  padding: 0 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #C8A882, transparent);
  max-width: 80rpx;
}

.title-text {
  font-size: 28rpx;
  color: #7A5533;
  font-weight: 600;
}

.benefits-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.benefit-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.benefit-name {
  font-size: 24rpx;
  color: #5C3D1E;
  font-weight: 500;
}

/* ========== 底部返回 ========== */
.footer-action {
  margin-top: 48rpx;
  text-align: center;
}

.back-link {
  font-size: 26rpx;
  color: #9B7355;
  text-decoration: underline;
  text-underline-offset: 4rpx;
}
