
/* Home Page Styles - Figma Design */

.home-container {
  min-height: 100vh;
  background: #F0EAD6;
  display: flex;
  flex-direction: column;
}

.home-content {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

/* Hero Section */
.hero-section {
  position: relative;
  height: 560rpx;
  border-radius: 48rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(90,55,25,0.18) 0%, rgba(90,55,25,0.55) 100%);
}

.wheat-decor {
  position: absolute;
  bottom: 0;
  opacity: 0.7;
  pointer-events: none;
}

.wheat-left {
  left: 16rpx;
}

.wheat-right {
  right: 16rpx;
}

.wheat-image {
  width: 100rpx;
  height: 150rpx;
}

.hero-text {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 48rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
}

.hero-title {
  font-family: 'Noto Serif SC', serif;
  font-size: 52rpx;
  color: #F5EDD8;
  font-weight: 700;
  letter-spacing: 6rpx;
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.25);
  text-align: center;
}

/* Service Cards */
.service-cards {
  display: flex;
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 32rpx rgba(155,115,85,0.12);
}

.service-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx;
  background: transparent;
}

.service-text {
  text-align: center;
}

.service-title {
  font-family: 'Noto Serif SC', serif;
  font-size: 36rpx;
  color: #7A5533;
  font-weight: 700;
  letter-spacing: 2rpx;
  display: block;
}

.service-subtitle {
  font-size: 22rpx;
  color: #B08860;
  letter-spacing: 1rpx;
  margin-top: 8rpx;
  display: block;
}

.service-icon {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.icon-image {
  width: 100rpx;
  height: 100rpx;
  object-fit: contain;
}

.icon-image-small {
  width: 72rpx;
  height: 72rpx;
  object-fit: contain;
}

.vip-card-image {
  width: 120rpx;
  height: 76rpx;
  object-fit: contain;
}

.service-divider {
  width: 2rpx;
  background: #EAD9BB;
  margin: 40rpx 0;
}

/* Feature Cards */
.feature-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(155,115,85,0.10);
}

.feature-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.feature-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-icon {
  width: 88rpx;
  height: 88rpx;
}

.feature-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 88rpx;
  height: 88rpx;
}

.feature-bg {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #F5EDD8 0%, #EAD9BB 100%);
}

/* VIP Card Icon */
.vip-card-icon {
  width: 120rpx;
  height: 76rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #C8A882 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(155, 115, 85, 0.2);
}

.vip-text {
  font-size: 28rpx;
  color: #F5EDD8;
  font-weight: 700;
  font-style: italic;
}

/* Ticket Icon */
.ticket-icon {
  width: 200rpx;
  height: 80rpx;
  background: #FFF7EC;
  border: 2rpx solid #C8A882;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.ticket-left {
  width: 70rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 2rpx dashed #C8A882;
  flex-shrink: 0;
}

.ticket-value {
  font-size: 28rpx;
  color: #9B7355;
  font-weight: 700;
}

.ticket-line {
  position: absolute;
  left: 70rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #F0EAD6;
  border-radius: 50%;
  margin-left: -6rpx;
  z-index: 2;
}

.ticket-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 6rpx;
  min-width: 0;
}

.ticket-condition {
  font-size: 18rpx;
  color: #7A5533;
  font-weight: 600;
  background: #F5EDD8;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
  white-space: nowrap;
}

.ticket-desc {
  font-size: 16rpx;
  color: #B08860;
  white-space: nowrap;
}

.feature-text {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-family: 'Noto Serif SC', serif;
  font-size: 36rpx;
  color: #7A5533;
  font-weight: 700;
  letter-spacing: 2rpx;
  display: block;
}

.feature-subtitle {
  font-size: 22rpx;
  color: #B08860;
  letter-spacing: 1rpx;
  margin-top: 4rpx;
  display: block;
}

/* Section Header */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 40rpx 0 24rpx;
}

.section-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.section-title {
  font-family: 'Noto Serif SC', serif;
  font-size: 32rpx;
  color: #5C3D1E;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #B08860;
}

/* Recommend Scroll */
.recommend-scroll {
  width: 100%;
}

.recommend-list {
  display: flex;
  gap: 20rpx;
  padding: 4rpx 4rpx 24rpx;
}

.recommend-item {
  flex-shrink: 0;
  width: 280rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.recommend-image-wrap {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.recommend-image {
  width: 100%;
  height: 100%;
}

.recommend-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #C8A882 100%);
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.recommend-info {
  padding: 20rpx;
}

.recommend-name {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-desc {
  font-size: 22rpx;
  color: #B08860;
  margin-top: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.recommend-price {
  font-size: 32rpx;
  color: #9B7355;
  font-weight: 700;
}

.recommend-cart {
  width: 48rpx;
  height: 48rpx;
  background: #9B7355;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-icon-img {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

/* Bottom Spacer */
.bottom-spacer {
  height: 40rpx;
}

