/* 积分明细页面样式 - 严格按照 Figma 设计稿实现 */

page {
  background: #F0EAD6;
  min-height: 100vh;
}

.points-history-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* ========== 固定头部区域 ========== */
.header-section {
  background: linear-gradient(135deg, #6B4423 0%, #3E2009 100%);
  padding-top: 120rpx;
  padding-bottom: 48rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  flex-shrink: 0;
}

/* 积分卡片 */
.points-card {
  background: rgba(255, 255, 255, 0.10);
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰圆圈 */
.deco-circle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}

.circle-1 {
  top: -40rpx;
  right: -40rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(212, 169, 106, 0.12);
}

.circle-2 {
  top: 40rpx;
  right: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background: rgba(212, 169, 106, 0.08);
}

.points-label {
  display: block;
  font-size: 22rpx;
  color: rgba(245, 237, 216, 0.6);
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}

.points-value-wrap {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.points-value {
  font-size: 88rpx;
  color: #F5EDD8;
  font-weight: 900;
  line-height: 1;
}

.points-unit {
  font-size: 26rpx;
  color: #D4A96A;
  font-weight: 700;
  margin-bottom: 12rpx;
}

/* 本月统计 */
.monthly-stats {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stat-icon {
  font-size: 26rpx;
}

.stat-icon-up {
  color: #D4A96A;
}

.stat-icon-down {
  color: #C8B89A;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(245, 237, 216, 0.6);
}

.stat-value {
  font-size: 26rpx;
  font-weight: 700;
}

.stat-value-up {
  color: #D4A96A;
}

.stat-value-down {
  color: #C8B89A;
}

.stat-divider {
  width: 2rpx;
  height: 24rpx;
  background: rgba(245, 237, 216, 0.15);
}

/* ========== 可滚动内容区域 ========== */
.content-section {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 24rpx;
}

/* 通知卡片 */
.notice-card {
  margin: 24rpx 32rpx 0;
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.notice-expiry {
  background: #FFF3E0;
  border: 1rpx solid rgba(200, 136, 58, 0.13);
}

.notice-info {
  background: #F5EDD8;
  margin-top: 16rpx;
}

.notice-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.notice-icon-info {
  color: #9B7355;
}

.notice-text {
  flex: 1;
  font-size: 24rpx;
  color: #7A4A1E;
  line-height: 1.5;
}

.notice-text-info {
  color: #7A5533;
}

.notice-highlight {
  font-weight: 700;
}

.highlight {
  font-weight: 700;
}

.notice-action {
  font-size: 22rpx;
  color: #C8883A;
  font-weight: 700;
  flex-shrink: 0;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  margin-bottom: 8rpx;
}

.tab-item {
  padding: 14rpx 36rpx;
  border-radius: 198rpx;
  background: #FFFFFF;
  color: #9B7355;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(155, 115, 85, 0.10);
  transition: all 0.18s;
}

.tab-item text {
  color: #9B7355;
}

.tab-active {
  background: #3E2009;
  box-shadow: 0 6rpx 20rpx rgba(62, 32, 9, 0.2);
}

.tab-active text {
  color: #F5EDD8;
  font-weight: 700;
}

/* ========== 交易列表 ========== */
.transaction-list {
  padding: 0 32rpx;
}

.date-group {
  margin-bottom: 32rpx;
}

/* 日期头部 */
.date-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.date-label {
  font-size: 22rpx;
  color: #B08860;
  font-weight: 600;
}

.date-line {
  flex: 1;
  height: 2rpx;
  background: #E8D9C4;
}

.date-subtotal {
  font-size: 20rpx;
  color: #C8B89A;
}

/* 交易卡片 */
.transaction-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.09);
}

.transaction-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 32rpx;
}

/* 类别图标 */
.tx-icon {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tx-icon-text {
  font-size: 32rpx;
}

/* 交易信息 */
.tx-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.tx-title {
  font-size: 26rpx;
  color: #3E2009;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.tx-subtitle {
  font-size: 22rpx;
  color: #B08860;
}

/* 积分金额 */
.tx-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
  flex-shrink: 0;
}

.tx-points {
  font-size: 30rpx;
  font-weight: 800;
  letter-spacing: 0.6rpx;
}

.tx-earn {
  color: #C8883A;
}

.tx-spend {
  color: #C07A6E;
}

.tx-time {
  font-size: 20rpx;
  color: #C8B89A;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  gap: 24rpx;
}

.empty-icon {
  font-size: 72rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #C8B89A;
}

/* ========== 加载中 ========== */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E8D9C4;
  border-top-color: #D4A96A;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ========== 底部提示 ========== */
.footer-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-top: 48rpx;
  margin-bottom: 32rpx;
}

.footer-line {
  width: 48rpx;
  height: 2rpx;
  background: #E0CEB0;
}

.footer-text {
  font-size: 20rpx;
  color: #C8B89A;
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: 40rpx;
}
