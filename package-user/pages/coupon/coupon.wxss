/* 优惠券中心 - 优化样式 */

/* 容器 */
.coupon-center-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F6F3 0%, #FFFFFF 100%);
  padding-top: calc(88rpx + 80rpx + env(safe-area-inset-top));
  padding-bottom: env(safe-area-inset-bottom);
}

/* 选择模式提示 */
.select-mode-tips {
  background: linear-gradient(135deg, #FFF8EE 0%, #F5EDD8 100%);
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border-bottom: 2rpx solid #E8DCC8;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-text {
  flex: 1;
  font-size: 28rpx;
  color: #7A5533;
  font-weight: 600;
}

.tips-amount {
  font-size: 26rpx;
  color: #B08860;
  background: #FFFFFF;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

/* Tab 栏选择模式样式 */
.tab-bar.select-mode {
  background: #FFF8EE;
}

/* 顶部导航栏 */
.header-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #FFFFFF;
  padding-top: env(safe-area-inset-top);
  box-shadow: 0 4rpx 30rpx rgba(0, 0, 0, 0.08);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 20rpx 0 10rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s;
}

.back-btn:active {
  background: rgba(0, 0, 0, 0.05);
}

.back-icon {
  width: 44rpx;
  height: 44rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2C2C2C;
  letter-spacing: 2rpx;
}

.header-right {
  width: 72rpx;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  padding: 0 40rpx;
  position: relative;
}

.tab-bar::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #E8E8E8 20%, #E8E8E8 80%, transparent);
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 0 24rpx;
  margin-right: 48rpx;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-text {
  font-size: 28rpx;
  color: #888888;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #B08860;
  font-weight: 600;
  transform: scale(1.05);
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #D4A96A, #B08860);
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

/* 优惠券列表 */
.coupon-list {
  height: calc(100vh - 88rpx - 80rpx - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding: 30rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #F0F0F0;
  border-top-color: #B08860;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 140rpx 60rpx;
}

.empty-icon-wrap {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F6F3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(176, 136, 96, 0.12);
  margin-bottom: 48rpx;
}

.empty-icon {
  font-size: 90rpx;
  filter: grayscale(0.3);
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #AAAAAA;
}

/* 优惠券卡片列表 */
.coupon-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 优惠券卡片 */
.coupon-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  transition: transform 0.2s, box-shadow 0.2s;
}

.coupon-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.coupon-card.disabled {
  opacity: 0.75;
}

.coupon-card.selectable {
  border: 2rpx solid transparent;
}

.coupon-card.selectable:active {
  border-color: #B08860;
  transform: scale(0.99);
}

/* 左侧金额区 */
.coupon-left {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 36rpx 0;
  position: relative;
  background: linear-gradient(135deg, var(--bg-color, #B08860) 0%, var(--bg-color-dark, #9B7355) 100%);
}

/* 左侧圆点装饰 */
.coupon-left::before,
.coupon-left::after {
  content: '';
  position: absolute;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  background: #F8F6F3;
  border-radius: 50%;
}

.coupon-left::before {
  top: -16rpx;
}

.coupon-left::after {
  bottom: -16rpx;
}

.coupon-symbol {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
}

.coupon-value {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.coupon-condition {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 12rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
}

/* 中间内容区 */
.coupon-middle {
  flex: 1;
  padding: 32rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

/* 虚线分隔 */
.coupon-middle::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: linear-gradient(180deg, transparent 0%, #EEEEEE 20%, #EEEEEE 80%, transparent 100%);
  background-size: 2rpx 16rpx;
}

.coupon-title {
  font-size: 30rpx;
  color: #2C2C2C;
  font-weight: 600;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.coupon-desc {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.coupon-time {
  font-size: 22rpx;
  color: #B08860;
  display: flex;
  align-items: center;
}

.coupon-time::before {
  content: '⏱';
  margin-right: 6rpx;
  font-size: 20rpx;
}

/* 右侧操作区 */
.coupon-right {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 20rpx;
}

/* 领取按钮 */
.coupon-action-btn {
  width: 112rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #D4A96A 0%, #B08860 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(176, 136, 96, 0.3);
  transition: all 0.2s;
}

.coupon-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(176, 136, 96, 0.2);
}

.coupon-action-btn text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.coupon-action-btn.received {
  background: #F0F0F0;
  box-shadow: none;
}

.coupon-action-btn.received text {
  color: #AAAAAA;
}

.coupon-remain {
  font-size: 18rpx;
  color: #999999;
  margin-top: 16rpx;
}

/* 状态徽章 */
.coupon-status-badge {
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.coupon-status-badge.active {
  background: linear-gradient(135deg, #E8F8F7 0%, #D4F0EE 100%);
}

.coupon-status-badge.active text {
  color: #2AAD9F;
}

.coupon-status-badge.used {
  background: #F5F5F5;
}

.coupon-status-badge.used text {
  color: #999999;
}

.coupon-status-badge.expired {
  background: linear-gradient(135deg, #FFF0F0 0%, #FFE5E5 100%);
}

.coupon-status-badge.expired text {
  color: #E85353;
}

.coupon-status-badge text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 去使用按钮 */
.coupon-btn-text {
  font-size: 24rpx;
  color: #B08860;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border: 2rpx solid #B08860;
  border-radius: 24rpx;
  transition: all 0.2s;
}

.coupon-btn-text:active {
  background: rgba(176, 136, 96, 0.1);
}

.coupon-btn-text.select {
  background: #B08860;
  color: #FFFFFF;
  border-color: #B08860;
}

/* 已使用/已过期遮罩 */
.coupon-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 60rpx;
  border-radius: 20rpx;
}

.mask-text {
  font-size: 44rpx;
  color: #999999;
  font-weight: 700;
  transform: rotate(-20deg);
  border: 3rpx solid #BBBBBB;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  opacity: 0.6;
  letter-spacing: 4rpx;
}

/* 底部间距 */
.bottom-spacer {
  height: 60rpx;
}
