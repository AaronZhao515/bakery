/* 优惠券中心 - 统一温暖风格 */

/* 容器 */
.coupon-center-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF8F3 0%, #F5EDE0 100%);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 选择模式提示 */
.select-mode-tips {
  background: linear-gradient(135deg, #8B6347 0%, #D4A574 100%);
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-text {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.tips-amount {
  font-size: 26rpx;
  color: #8B6347;
  background: #FFFFFF;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

/* Tab 栏 */
.tab-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  padding: 0 30rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(139, 99, 71, 0.08);
}

.tab-bar::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #EAD9BB 20%, #EAD9BB 80%, transparent);
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 0 24rpx;
  margin: 0 32rpx;
  min-width: 140rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #9B7355;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #8B6347;
  font-weight: 600;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #D4A574, #8B6347);
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

/* 优惠券列表 */
.coupon-list {
  height: calc(100vh - 88rpx - 80rpx - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding: 30rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #F5EDE0;
  border-top-color: #8B6347;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #9B7355;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 140rpx 60rpx;
}

.empty-icon-wrap {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F5EDE0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(139, 99, 71, 0.12);
  margin-bottom: 48rpx;
  border: 2rpx solid #EAD9BB;
}

.empty-icon {
  font-size: 90rpx;
  filter: grayscale(0.3);
}

.empty-text {
  font-size: 32rpx;
  color: #5C3D1E;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #9B7355;
}

/* 优惠券卡片列表 */
.coupon-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 优惠券卡片 */
.coupon-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(139, 99, 71, 0.1);
  position: relative;
  transition: transform 0.2s, box-shadow 0.2s;
  border: 2rpx solid #EAD9BB;
}

.coupon-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 99, 71, 0.08);
}

.coupon-card.disabled {
  opacity: 0.7;
}

.coupon-card.selectable {
  border: 2rpx solid transparent;
}

.coupon-card.selectable:active {
  border-color: #8B6347;
  transform: scale(0.99);
}

/* 左侧金额区 - 默认样式 */
.coupon-left {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 36rpx 0;
  position: relative;
}

/* 可领取状态 - 已领取（浅灰米色，与未领取明显区分） */
.coupon-left.received {
  background: linear-gradient(135deg, #D4C4B0 0%, #B8A896 100%) !important;
}

/* 左侧圆点装饰 */
.coupon-left::before,
.coupon-left::after {
  content: '';
  position: absolute;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  background: #FDF8F3;
  border-radius: 50%;
}

.coupon-left::before {
  top: -16rpx;
}

.coupon-left::after {
  bottom: -16rpx;
}

.coupon-symbol {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
}

.coupon-value {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.coupon-condition {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 12rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

/* 中间内容区 */
.coupon-middle {
  flex: 1;
  padding: 32rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

/* 虚线分隔 */
.coupon-middle::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: linear-gradient(180deg, transparent 0%, #EAD9BB 20%, #EAD9BB 80%, transparent 100%);
  background-size: 2rpx 16rpx;
}

/* 标题行 - 标题和标签并排 */
.coupon-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.coupon-title {
  font-size: 30rpx;
  color: #5C3D1E;
  font-weight: 600;
  line-height: 1.3;
}

/* 优惠券类型标签 */
.coupon-type-tag {
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 新人专属标签 - 粉色系 */
.coupon-type-tag.tag-newcomer {
  background: linear-gradient(135deg, #FCE4EC 0%, #F8BBD9 100%);
  color: #C2185B;
}

/* 限时优惠标签 - 橙色系 */
.coupon-type-tag.tag-limited {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #E65100;
}

.coupon-desc {
  font-size: 24rpx;
  color: #9B7355;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.coupon-time {
  font-size: 22rpx;
  color: #8B6347;
  display: flex;
  align-items: center;
}

.coupon-time::before {
  content: '⏱';
  margin-right: 6rpx;
  font-size: 20rpx;
}

/* 右侧操作区 */
.coupon-right {
  width: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
}

/* 右侧操作区 - 垂直排列 */
.coupon-right {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  gap: 16rpx;
}

/* 领取按钮 - 立即领取（深棕色，与卡片一致） */
.coupon-action-btn {
  width: 112rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #B08860 0%, #8B5A3C 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(139, 99, 71, 0.3);
  transition: all 0.2s;
}

.coupon-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(139, 99, 71, 0.2);
}

.coupon-action-btn text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* 已领取按钮（米色，与已使用一致） */
.coupon-action-btn.received {
  background: #F5EDE0;
  box-shadow: none;
}

.coupon-action-btn.received text {
  color: #9B7355;
}

.coupon-remain {
  font-size: 18rpx;
  color: #9B7355;
  margin-top: 16rpx;
}

/* 状态徽章和按钮统一样式 - 垂直排列，文字居中 */
.coupon-status-badge,
.coupon-btn-text {
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 24rpx;
  flex-shrink: 0;
  transition: all 0.2s;
  width: 112rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 未使用状态 - 绿色背景 */
.coupon-status-badge.active {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #2E7D32;
}

/* 已使用状态 - 米色背景 */
.coupon-status-badge.used {
  background: #F5EDE0;
  color: #9B7355;
}

/* 已过期状态 - 红色背景 */
.coupon-status-badge.expired {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #C62828;
}

/* 去使用按钮 - 深棕色背景 */
.coupon-btn-text {
  color: #FFFFFF;
  background: linear-gradient(135deg, #B08860 0%, #8B5A3C 100%);
  box-shadow: 0 4rpx 12rpx rgba(139, 99, 71, 0.3);
}

.coupon-btn-text:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(139, 99, 71, 0.2);
}

.coupon-btn-text.select {
  background: linear-gradient(135deg, #B08860 0%, #8B5A3C 100%);
  color: #FFFFFF;
}

/* 已使用/已过期遮罩 */
.coupon-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(253, 248, 243, 0.6);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 60rpx;
  border-radius: 24rpx;
}

.mask-text {
  font-size: 44rpx;
  color: #9B7355;
  font-weight: 700;
  transform: rotate(-20deg);
  border: 3rpx solid #B08860;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  opacity: 0.5;
  letter-spacing: 4rpx;
}

/* 底部间距 */
.bottom-spacer {
  height: 40rpx;
}
