/* 隐私政策页面样式 */

page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.privacy-container {
  padding-bottom: 60rpx;
}

/* 顶部标题区 */
.header-section {
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  padding: 60rpx 40rpx;
  text-align: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.update-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 内容区块 */
.content-section {
  background: #FFFFFF;
  margin: 20rpx 30rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.section-content {
  color: #666666;
  line-height: 1.8;
}

.paragraph {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: justify;
}

.paragraph.highlight {
  background: #FFF8EE;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #9B7355;
  color: #5C3D1E;
  font-weight: 500;
}

/* 定义列表 */
.definition-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #FAFAFA;
  border-radius: 12rpx;
}

.def-term {
  font-weight: 600;
  color: #8B6347;
}

.def-content {
  color: #666666;
  font-size: 26rpx;
}

/* 子章节 */
.subsection {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.subsection-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

/* 信息列表 */
.info-list {
  margin-top: 16rpx;
}

.info-item {
  margin-bottom: 20rpx;
  padding-left: 16rpx;
}

.info-name {
  font-weight: 600;
  color: #5C3D1E;
}

.info-desc {
  color: #666666;
  font-size: 26rpx;
}

/* 使用目的列表 */
.usage-list {
  margin-top: 24rpx;
}

.usage-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 28rpx;
}

.usage-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #8B6347 0%, #9B7355 100%);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.usage-content {
  flex: 1;
}

.usage-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.usage-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 安全措施 */
.security-list {
  margin: 24rpx 0;
}

.security-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.security-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.security-text {
  font-size: 28rpx;
  color: #333333;
}

/* 权利列表 */
.right-list {
  margin: 24rpx 0;
}

.right-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #FAFAFA;
  border-radius: 12rpx;
  border-left: 6rpx solid #9B7355;
}

.right-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #8B6347;
  margin-bottom: 8rpx;
}

.right-desc {
  font-size: 26rpx;
  color: #666666;
}

/* 存储期限 */
.storage-list {
  margin: 24rpx 0;
}

.storage-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: #FAFAFA;
  border-radius: 12rpx;
}

.storage-label {
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.storage-value {
  color: #666666;
  font-size: 26rpx;
}

/* 联系区域 */
.contact-section {
  background: linear-gradient(135deg, #FFF8EE 0%, #FFFFFF 100%);
  border: 2rpx solid #E8D5C4;
}

.contact-list {
  margin-top: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.contact-label {
  font-weight: 600;
  color: #5C3D1E;
  margin-right: 12rpx;
}

.contact-value {
  color: #333333;
  font-size: 28rpx;
}

.contact-value.link {
  color: #8B6347;
  text-decoration: underline;
}

.copy-hint {
  font-size: 22rpx;
  color: #999999;
  margin-left: 12rpx;
}

.feedback-text {
  text-align: center;
  color: #999999;
  margin-top: 32rpx;
  font-size: 26rpx;
}

/* 底部 */
.footer-section {
  text-align: center;
  padding: 40rpx;
  margin-top: 40rpx;
}

.footer-text {
  display: block;
  font-size: 28rpx;
  color: #8B6347;
  margin-bottom: 16rpx;
}

.footer-copyright {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* 特殊标记 */
.important-notice {
  background: #FFF2F0;
  border: 2rpx solid #FFCCC7;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 24rpx 0;
}

.important-notice text {
  color: #CF1322;
  font-size: 28rpx;
}
