/* 购物车页面样式 - 温暖烘焙风格 */

/* 主色调变量 */
:root {
  --primary-color: #9B7355;
  --primary-dark: #7A5533;
  --bg-color: #F0EAD6;
  --text-color: #5C3D1E;
  --text-light: #7A5533;
  --text-lighter: #B08860;
  --border-color: #EAD9BB;
  --danger-color: #E57373;
}

page {
  background-color: #F0EAD6;
  min-height: 100vh;
}

.cart-container {
  padding-bottom: 160rpx;
}

/* ========== 空购物车状态 ========== */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #5C3D1E;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 26rpx;
  color: #B08860;
  margin-bottom: 48rpx;
}

.go-shopping-btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #9B7355 0%, #7A5533 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(155, 115, 85, 0.4);
}

.go-shopping-btn::after {
  border: none;
}

/* ========== 购物车内容 ========== */
.cart-content {
  background-color: #F0EAD6;
}

/* 店铺头部 */
.shop-header {
  background-color: #FFFFFF;
  padding: 24rpx 30rpx;
  margin-bottom: 2rpx;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.08);
}

.shop-select {
  display: flex;
  align-items: center;
}

.shop-name {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  margin-left: 16rpx;
}

/* 复选框样式 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #C8A882;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background-color: #9B7355;
  border-color: #9B7355;
}

.check-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品列表 */
.cart-list {
  max-height: calc(100vh - 360rpx);
  padding: 20rpx 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  transition: transform 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.1);
}

.item-select {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #F5EDD8;
}

.item-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-spec {
  font-size: 24rpx;
  color: #B08860;
  margin-bottom: 16rpx;
}

.item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-price {
  font-size: 32rpx;
  color: #9B7355;
  font-weight: 700;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  background-color: #F5EDD8;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #EAD9BB;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #7A5533;
  background-color: #F5EDD8;
  font-weight: 700;
  transition: all 0.2s;
}

.quantity-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}

.quantity-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
}

.quantity-btn.disabled {
  color: #B08860;
  background-color: #F5EDD8;
  opacity: 0.5;
}

.quantity-btn:active {
  opacity: 0.8;
}

.quantity-input {
  width: 72rpx;
  height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  background-color: #FFFFFF;
  border-left: 2rpx solid #EAD9BB;
  border-right: 2rpx solid #EAD9BB;
}

.stock-tip {
  font-size: 22rpx;
  color: #9B7355;
  margin-top: 8rpx;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: -160rpx;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background-color: #C85A5A;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 20rpx 20rpx 0;
}

.delete-btn text {
  color: #FFFFFF;
  font-size: 28rpx;
}

/* ========== 底部立即预定栏 ========== */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 32rpx rgba(155, 115, 85, 0.14);
  z-index: 100;
  border-radius: 40rpx 40rpx 0 0;
}

.footer-select {
  display: flex;
  align-items: center;
}

.select-all-text {
  font-size: 26rpx;
  color: #7A5533;
  margin-left: 12rpx;
}

.footer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 24rpx;
}

.total-price {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 26rpx;
  color: #7A5533;
  margin-right: 8rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #9B7355;
  font-weight: 600;
}

.price-value {
  font-size: 40rpx;
  color: #9B7355;
  font-weight: 700;
}

.discount-info {
  font-size: 22rpx;
  color: #9B7355;
  margin-top: 4rpx;
}

.checkout-btn {
  min-width: 200rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #9B7355 0%, #7A5533 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(155, 115, 85, 0.4);
}

.checkout-btn::after {
  border: none;
}

.checkout-btn.disabled {
  background: #CCCCCC;
  box-shadow: none;
}

.checkout-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.checkout-text {
  font-size: 28rpx;
  font-weight: 600;
}

.checkout-count {
  font-size: 24rpx;
  margin-left: 4rpx;
  opacity: 0.9;
}

/* ========== 猜你喜欢 ========== */
.recommend-section {
  padding: 40rpx 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.section-title text {
  font-size: 28rpx;
  color: #7A5533;
  font-weight: 600;
  margin: 0 20rpx;
}

.title-line {
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #9B7355);
}

.title-line:last-child {
  background: linear-gradient(90deg, #9B7355, transparent);
}

.recommend-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommend-item {
  width: 48%;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.1);
}

.recommend-image {
  width: 100%;
  height: 280rpx;
}

.recommend-name {
  display: block;
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 600;
  padding: 16rpx 20rpx 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-price {
  display: block;
  font-size: 30rpx;
  color: #9B7355;
  font-weight: 700;
  padding: 0 20rpx 20rpx;
}

/* ========== 删除确认弹窗 ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 560rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  z-index: 1001;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
}

.modal-header text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.modal-body {
  padding: 20rpx 40rpx 40rpx;
  text-align: center;
}

.modal-body text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #F0E6DC;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  border: none;
  border-radius: 0;
  background-color: transparent;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #666666;
  border-right: 2rpx solid #F0E6DC;
}

.modal-btn.confirm {
  color: #D4A574;
  font-weight: 500;
}

.modal-btn:active {
  background-color: #FDF8F3;
}
