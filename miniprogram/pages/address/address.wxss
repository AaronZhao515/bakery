/* 地址管理页样式 */
.container {
  min-height: 100vh;
  background-color: #FDF8F3;
  padding-bottom: 200rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.address-card.default {
  border: 2rpx solid #D4A574;
}

.address-content {
  padding: 30rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 30rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  margin-left: auto;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #D4A574 0%, #c49a6b 100%);
  color: #fff;
  font-size: 22rpx;
  border-radius: 20rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 地址操作 */
.address-actions {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.action-item.active .action-text {
  color: #D4A574;
}

.action-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.action-divider {
  width: 2rpx;
  height: 30rpx;
  background-color: #eee;
  margin: 0 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #D4A574 0%, #c49a6b 100%);
  border-radius: 45rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 0;
  padding: 0;
}

.add-btn::after {
  border: none;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-weight: 500;
}

/* 微信导入 */
.wechat-import {
  position: fixed;
  bottom: 130rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.import-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 40rpx;
  background-color: #fff;
  border: 2rpx solid #07c160;
  border-radius: 40rpx;
  margin: 0;
}

.import-btn::after {
  border: none;
}

.import-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.import-text {
  font-size: 26rpx;
  color: #07c160;
}
