/* 订单列表页样式 */
.container {
  min-height: 100vh;
  background-color: #FDF8F3;
  padding-bottom: 40rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 0 20rpx;
}

.filter-item {
  position: relative;
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active .filter-text {
  color: #D4A574;
  font-weight: 600;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #D4A574;
  border-radius: 2rpx;
}

.badge {
  position: absolute;
  top: 15rpx;
  right: 5rpx;
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 8rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-no {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.status-0 { color: #ff9800; }
.status-1 { color: #2196f3; }
.status-2 { color: #9c27b0; }
.status-3 { color: #4caf50; }
.status-4 { color: #999; }
.status-5 { color: #ff5722; }
.status-6 { color: #999; }

/* 商品列表 */
.goods-list {
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.goods-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.price {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 订单金额 */
.order-amount {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.amount-text {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  color: #D4A574;
  font-weight: 600;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  margin: 0;
  padding: 0 30rpx;
  text-align: center;
}

.btn::after {
  border: none;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.btn-primary {
  background-color: #D4A574;
  color: #fff;
}

.btn-primary:active {
  background-color: #c49a6b;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 280rpx;
}
