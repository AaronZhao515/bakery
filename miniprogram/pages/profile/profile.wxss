/* 会员中心页样式 */
.container {
  min-height: 100vh;
  background-color: #FDF8F3;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: linear-gradient(135deg, #D4A574 0%, #c49a6b 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.user-content {
  position: relative;
  padding: 120rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
}

.user-avatar-wrapper {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  overflow: hidden;
  flex-shrink: 0;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  font-size: 24rpx;
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.member-badge {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  width: fit-content;
}

.badge-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.login-btn {
  margin: 0;
  padding: 15rpx 40rpx;
  background-color: #D4A574;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  line-height: 1.5;
}

.login-btn::after {
  border: none;
}

/* 会员权益 */
.member-benefits {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.benefit-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.benefit-text {
  font-size: 24rpx;
  color: #666;
}

/* 资产卡片 */
.assets-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.asset-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.asset-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #D4A574;
  margin-bottom: 10rpx;
}

.asset-label {
  font-size: 26rpx;
  color: #666;
}

.asset-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #eee;
}

/* 菜单卡片 */
.menu-card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.menu-more {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

/* 订单菜单 */
.order-menu {
  display: flex;
  justify-content: space-around;
}

.order-menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
}

.menu-icon-wrapper {
  position: relative;
  margin-bottom: 15rpx;
}

.menu-icon {
  font-size: 48rpx;
}

.menu-badge {
  position: absolute;
  top: -10rpx;
  right: -15rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  font-size: 24rpx;
  color: #666;
}

/* 服务菜单 */
.service-menu {
  display: flex;
  flex-direction: column;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.service-item:last-child {
  border-bottom: none;
}

.service-icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  background-color: #FFF8F0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.service-icon {
  font-size: 32rpx;
}

.service-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 联系客服按钮 */
.contact-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #D4A574;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(212, 165, 116, 0.4);
  padding: 0;
  margin: 0;
}

.contact-btn::after {
  border: none;
}

.contact-icon {
  font-size: 48rpx;
}
