/* 支付页面样式 - 温暖烘焙风格 */

page {
  background-color: #FDF8F3;
  min-height: 100vh;
}

.payment-container {
  padding: 30rpx;
  padding-bottom: 160rpx;
}

/* ========== 支付金额区域 ========== */
.pay-amount-section {
  background: linear-gradient(135deg, #D4A574 0%, #B8935F 100%);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(212, 165, 116, 0.3);
}

.pay-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.pay-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.currency {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-right: 8rpx;
}

.amount {
  font-size: 80rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.pay-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* ========== 支付方式区域 ========== */
.pay-method-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.method-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FDF8F3;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.method-item.active {
  border-color: #D4A574;
  background-color: #FFF9F3;
}

.method-icon {
  width: 72rpx;
  height: 72rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.icon {
  font-size: 40rpx;
}

.method-info {
  flex: 1;
  min-width: 0;
}

.method-name {
  display: block;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.method-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  background-color: #D4A574;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 24rpx;
}

/* ========== 订单信息区域 ========== */
.order-info-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
}

.info-value.discount {
  color: #E57373;
}

/* ========== 支付按钮区域 ========== */
.pay-button-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.pay-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #07C160 0%, #05A350 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

.pay-btn::after {
  border: none;
}

.pay-btn.paying {
  background: #CCCCCC;
}

.pay-btn:active {
  opacity: 0.9;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* ========== 积分信息区域 ========== */
.points-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.points-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.points-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.points-value {
  font-size: 32rpx;
  color: #D4A574;
  font-weight: 600;
}

.points-value.insufficient {
  color: #E57373;
}

.points-hint {
  background-color: #FFEBEE;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #E57373;
}

/* ========== 线下支付按钮 ========== */
.pay-btn.offline-btn {
  background: linear-gradient(135deg, #8B7355 0%, #6B4423 100%);
}

/* ========== 安全提示 ========== */
.security-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  padding-bottom: 140rpx;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
}
