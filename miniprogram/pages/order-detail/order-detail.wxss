/* 订单详情页样式 */
.container {
  min-height: 100vh;
  background-color: #FDF8F3;
  padding-bottom: 140rpx;
}

/* 状态区域 */
.status-section {
  background: linear-gradient(135deg, #D4A574 0%, #c49a6b 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
}

.progress-item.active {
  opacity: 1;
}

.progress-dot {
  width: 24rpx;
  height: 24rpx;
  background-color: #fff;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.progress-item.active .progress-dot {
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.3);
}

.progress-text {
  font-size: 24rpx;
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 10rpx;
  margin-bottom: 34rpx;
}

.progress-line.active {
  background-color: #fff;
}

/* 通用区块 */
.section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 物流信息 */
.logistics-section {
  padding: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.logistics-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.logistics-status {
  font-size: 28rpx;
  color: #4caf50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.logistics-time {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 32rpx;
  color: #999;
}

/* 收货地址 */
.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.address-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.address-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.address-content {
  padding-left: 42rpx;
}

.address-user {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 商品清单 */
.goods-list {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.goods-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.price {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 价格明细 */
.price-section {
  padding-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.price-item.total {
  border-top: 1rpx solid #f5f5f5;
  margin-top: 15rpx;
  padding-top: 25rpx;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-value {
  font-size: 26rpx;
  color: #333;
}

.price-value.discount {
  color: #ff4d4f;
}

.price-value.total-value {
  font-size: 36rpx;
  color: #D4A574;
  font-weight: 600;
}

/* 订单信息 */
.info-section {
  padding-top: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 15rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  flex-shrink: 0;
  margin-right: 30rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.copy-btn {
  display: inline-block;
  margin-left: 15rpx;
  padding: 4rpx 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.btn {
  min-width: 180rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin: 0;
  padding: 0 35rpx;
  text-align: center;
}

.btn::after {
  border: none;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.btn-primary {
  background-color: #D4A574;
  color: #fff;
}

.btn-primary:active {
  background-color: #c49a6b;
}

/* 加载中 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #D4A574;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.error-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
}
