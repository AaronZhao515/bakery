/* 订单确认页面样式 - 预定订单（匹配 Figma 设计稿） */

page {
  background-color: #F0EAD6;
  min-height: 100vh;
}

.order-confirm-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.header-bar {
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  padding: 100rpx 30rpx 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 0;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
}

.back-text {
  font-size: 26rpx;
  color: rgba(245, 237, 216, 0.85);
}

.header-title {
  font-size: 34rpx;
  color: #F5EDD8;
  font-weight: 700;
  margin-left: 16rpx;
  letter-spacing: 2rpx;
}

.order-type-badge {
  margin-left: auto;
  padding: 6rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.order-type-badge.pickup {
  background: #D4A96A;
}

.order-type-badge.delivery {
  background: #9B7355;
}

/* ========== 页面内容 ========== */
.page-content {
  flex: 1;
  padding: 280rpx 24rpx 320rpx;
  box-sizing: border-box;
}

/* ========== 信息卡片 ========== */
.info-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.info-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F5EDD8;
}

.info-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  background: #F5EDD8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-icon {
  font-size: 40rpx;
}

.info-title-wrap {
  flex: 1;
}

.info-title {
  font-size: 32rpx;
  color: #5C3D1E;
  font-weight: 700;
  display: block;
}

.info-subtitle {
  font-size: 24rpx;
  color: #B08860;
  margin-top: 8rpx;
  display: block;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
}

.selector-label {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
}

.selector-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-text {
  font-size: 28rpx;
  color: #9B7355;
  font-weight: 600;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 地址选择器 */
.address-selector {
  display: flex;
  align-items: center;
  padding-top: 24rpx;
}

.address-content {
  flex: 1;
}

.address-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.address-name {
  font-size: 30rpx;
  color: #5C3D1E;
  font-weight: 700;
}

.address-phone {
  font-size: 26rpx;
  color: #B08860;
}

.address-detail {
  font-size: 26rpx;
  color: #7A5533;
  margin-top: 12rpx;
  display: block;
}

.address-empty {
  flex: 1;
}

.empty-text {
  font-size: 28rpx;
  color: #B08860;
}

/* ========== 商品列表卡片 ========== */
.products-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F5EDD8;
}

.shop-icon-wrap {
  width: 48rpx;
  height: 48rpx;
  background: #F5EDD8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shop-icon {
  width: 28rpx;
  height: 28rpx;
}

.shop-name {
  font-size: 30rpx;
  color: #5C3D1E;
  font-weight: 700;
}

/* 商品列表 */
.product-list {
  padding: 24rpx 0;
}

.product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F5EDD8;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #F5EDD8;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
  min-width: 0;
}

.product-name {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
  display: block;
  line-height: 1.4;
}

.product-desc {
  font-size: 22rpx;
  color: #B08860;
  margin-top: 8rpx;
  display: block;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.product-price {
  font-size: 26rpx;
  color: #9B7355;
  font-weight: 700;
}

.product-qty {
  font-size: 24rpx;
  color: #B08860;
}

.product-total {
  font-size: 30rpx;
  color: #5C3D1E;
  font-weight: 700;
  margin-left: 16rpx;
}

/* 小计 */
.subtotal-row {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #F5EDD8;
}

.subtotal-label {
  font-size: 26rpx;
  color: #B08860;
}

.subtotal-price {
  font-size: 34rpx;
  color: #9B7355;
  font-weight: 700;
}

/* ========== 优惠券 ========== */
.coupon-row {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.row-label {
  font-size: 28rpx;
  color: #5C3D1E;
  font-weight: 600;
}

.row-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.coupon-text {
  font-size: 26rpx;
  color: #B08860;
}

.coupon-text.active {
  color: #9B7355;
  font-weight: 700;
}

/* ========== 备注 ========== */
.remark-row {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 115, 85, 0.10);
}

.remark-input {
  flex: 1;
  font-size: 28rpx;
  color: #5C3D1E;
  text-align: right;
}

.remark-placeholder {
  color: #B08860;
}

/* ========== 订单提示 ========== */
.order-note {
  background: #FFF8EE;
  border: 3rpx dashed #D4A96A;
  border-radius: 32rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.note-icon {
  font-size: 36rpx;
}

.note-content {
  flex: 1;
}

.note-title {
  font-size: 26rpx;
  color: #5C3D1E;
  font-weight: 600;
  display: block;
}

.note-desc {
  font-size: 22rpx;
  color: #B08860;
  margin-top: 4rpx;
  display: block;
}

/* 底部间距 */
.bottom-spacer {
  height: 40rpx;
}

/* ========== 底部提交栏 ========== */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 30rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(155, 115, 85, 0.14);
  border-radius: 40rpx 40rpx 0 0;
  z-index: 100;
}

.submit-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-wrap {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 26rpx;
  color: #B08860;
}

.price-symbol {
  font-size: 28rpx;
  color: #7A5533;
  font-weight: 600;
}

.price-value {
  font-size: 44rpx;
  color: #7A5533;
  font-weight: 800;
}

.submit-btn {
  min-width: 240rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #8B6347 0%, #7A5533 100%);
  color: #F5EDD8;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  border-radius: 999rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(90, 50, 10, 0.25);
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.95;
}

.submit-btn.submitting {
  opacity: 0.7;
}

/* 优惠券行样式优化 */
.coupon-text.available {
  color: #E07B6E;
  font-weight: 600;
}
